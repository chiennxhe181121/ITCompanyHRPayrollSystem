@{
    Layout = null;
}

@model HumanResourcesManager.BLL.DTOs.LoginDTO


<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll-Đăng nhập</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
    <!-- Loading overlay khi chuyển trang -->
    <div id="pageLoadingOverlay" class="page-loading-overlay hidden">
        <div class="page-loading-overlay__content">
            <img src="~/img/loading.gif" alt="Đang tải..." />
            <div class="page-loading-bar"><span class="page-loading-dot"></span><span class="page-loading-dot"></span><span class="page-loading-dot"></span></div>
        </div>
    </div>

    <div class="min-h-screen flex">
        <!-- Left Side - Company Branding with Image -->
        <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">
            <!-- Background Image -->
            <div class="absolute inset-0">
                <img src="~/img/bg.jpg" alt="Office Background" class="w-full h-full object-cover" />
                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-br from-blue-900/90 via-indigo-900/85 to-purple-900/90"></div>
            </div>

            <!-- Content -->
            <div class="relative z-10 p-12 flex flex-col justify-between w-full">
                <div>
                    <div class="flex items-center space-x-3 mb-8">
                        <div class="w-[4.4rem] h-[4.4rem] bg-white/90 rounded-2xl flex items-center justify-center shadow-xl p-1">
                            <img src="~/img/logo.png" alt="CCD Team Code" class="w-full h-full object-contain" />
                        </div>
                        <span class="text-white text-3xl font-bold">Payroll System</span>
                    </div>
                    <h1 class="text-5xl font-bold text-white leading-tight mb-6">
                        Hệ Thống Quản Lý<br />Nhân Sự & Lương
                    </h1>
                    <p class="text-white/90 text-lg max-w-md leading-relaxed">
                        Giải pháp toàn diện với phân quyền nghiêm ngặt, quản lý chấm công và tính lương tự động.
                    </p>
                </div>

                <div class="grid grid-cols-3 gap-4">
                    <div class="bg-white/10 backdrop-blur-md rounded-2xl p-5 border border-white/20 shadow-lg">
                        <p class="text-3xl font-bold text-white mb-1">Hệ thống</p>
                        <p class="text-white/80 text-sm">Bảo mật cao</p>
                    </div>
                    <div class="bg-white/10 backdrop-blur-md rounded-2xl p-5 border border-white/20 shadow-lg">
                        <p class="text-3xl font-bold text-white mb-1">Tự động</p>
                        <p class="text-white/80 text-sm">Tính toán</p>
                    </div>
                    <div class="bg-white/10 backdrop-blur-md rounded-2xl p-5 border border-white/20 shadow-lg">
                        <p class="text-3xl font-bold text-white mb-1">100%</p>
                        <p class="text-white/80 text-sm">Chính xác</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="flex-1 flex items-center justify-center p-8 bg-white">
            <div class="w-full max-w-md">
                <div class="text-center mb-8">
                    <div class="inline-flex lg:hidden items-center space-x-3 mb-6">
                        <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-purple-600 rounded-xl flex items-center justify-center">
                            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
                        </div>
                        <span class="text-gray-900 text-2xl font-bold">Payroll System</span>
                    </div>
                    <h2 class="text-3xl font-bold text-gray-900 mb-2">Đăng Nhập</h2>
                    <p class="text-gray-600">Nhập thông tin đăng nhập của bạn</p>
                </div>

                <form id="loginForm"
                      class="space-y-5"
                      method="post"
                      asp-controller="Auth"
                      asp-action="Login"
                      novalidate>

                    @Html.AntiForgeryToken()

                    <!-- ===== USERNAME ===== -->
                    <div>
                        <label asp-for="LoginKey"
                               class="block text-sm font-semibold text-gray-700 mb-2">
                            Tên đăng nhập
                        </label>

                        <div class="relative">
                            <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
                                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>

                            <input asp-for="LoginKey"
                                   class="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-300
                          text-gray-900 rounded-xl focus:ring-2 focus:ring-blue-500
                          focus:border-blue-500 transition"
                                   placeholder="Nhập tên đăng nhập" />
                        </div>

                        <span asp-validation-for="LoginKey"
                              class="text-sm text-red-600"></span>
                    </div>

                    <!-- ===== PASSWORD ===== -->
                    <div>
                        <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
                            Mật khẩu
                        </label>

                        <div class="relative">
                            <!-- icon ổ khóa -->
                            <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
                                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>

                            <!-- input password -->
                            <input id="password"
                                   name="Password"
                                   type="password"
                                   class="w-full pl-12 pr-12 py-3 bg-gray-50 border border-gray-300 text-gray-900 rounded-xl
                      focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                   placeholder="Nhập mật khẩu"
                                   required />

                            <!-- nút con mắt -->
                            <button type="button"
                                    id="togglePassword"
                                    class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition">
                                <!-- eye closed -->
                                <svg id="eyeClosed" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M13.875 18.825A10.05 10.05 0 0112 19c-5.523 0-10-4.477-10-10
                         0-1.657.402-3.22 1.125-4.575M6.223 6.223
                         A9.955 9.955 0 0112 5c5.523 0 10 4.477 10 10
                         0 1.657-.402 3.22-1.125 4.575M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>

                                <!-- eye open -->
                                <svg id="eyeOpen" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M2.458 12C3.732 7.943 7.523 5 12 5
                         c4.477 0 8.268 2.943 9.542 7
                         -1.274 4.057-5.065 7-9.542 7
                         -4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                        </div>

                        <div class="text-right mt-2">
                            <button type="button"
                                    id="forgotPasswordBtn"
                                    class="text-sm text-blue-600 hover:text-blue-700 font-semibold transition">
                                Quên mật khẩu?
                            </button>
                        </div>
                    </div>


                    <!-- ===== ERROR FROM SERVER ===== -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="flex items-start space-x-2 bg-red-50 border border-red-200
                        text-red-700 px-4 py-3 rounded-xl text-sm">
                            <svg class="w-5 h-5 flex-shrink-0 mt-0.5"
                                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <p>@ViewBag.Error</p>
                        </div>
                    }

                    <!-- ===== SUBMIT ===== -->
                    <button type="submit"
                            id="loginBtn"
                            class="w-full bg-gradient-to-r from-blue-600 to-indigo-600
                   hover:from-blue-700 hover:to-indigo-700 text-white
                   font-semibold py-3 rounded-xl shadow-lg hover:shadow-xl
                   transition duration-200 flex items-center justify-center
                   space-x-2 group">
                        <span>Đăng Nhập</span>
                        <svg class="w-5 h-5 group-hover:translate-x-1 transition"
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M14 5l7 7m0 0l-7 7m7-7H3" />
                        </svg>
                    </button>
                </form>


                <div class="mt-8 text-center">
                    <p class="text-gray-500 text-xs flex items-center justify-center space-x-1">
                        <span class="text-gray-500 text-xs border-b border-gray-500">© CCD Team 2026</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div id="forgotPasswordModal"
         class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 z-50">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-8 relative">
            <button id="closeForgotModal"
                    type="button"
                    class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>

            @await Html.PartialAsync("ForgotPassword", new HumanResourcesManager.BLL.DTOs.ForgotPasswordDTO())
            @await Html.PartialAsync("VerifyOtp", new HumanResourcesManager.BLL.DTOs.VerifyOtpDTO())
            @await Html.PartialAsync("ResetPassword", new HumanResourcesManager.BLL.DTOs.ResetPasswordDTO())

            <div id="resetSuccessMessage" class="hidden text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M5 13l4 4L19 7"/>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-2">Đổi mật khẩu thành công!</h3>
                <p class="text-gray-600 text-sm mb-6">
                    Mật khẩu của bạn đã được cập nhật. Vui lòng đăng nhập lại với mật khẩu mới.
                </p>
                <button id="closeSuccessBtn"
                        type="button"
                        class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 rounded-xl shadow-lg hover:shadow-xl transition duration-200">
                    Đóng
                </button>
            </div>
        </div>
    </div>

    <script src="~/js/auth-forgot-password.js"></script>

</body>

</html>

<script>
    const passwordInput = document.getElementById("password");
    const toggleBtn = document.getElementById("togglePassword");
    const eyeOpen = document.getElementById("eyeOpen");
    const eyeClosed = document.getElementById("eyeClosed");

    toggleBtn.addEventListener("click", () => {
        const isPassword = passwordInput.type === "password";

        passwordInput.type = isPassword ? "text" : "password";
        eyeOpen.classList.toggle("hidden", !isPassword);
        eyeClosed.classList.toggle("hidden", isPassword);
    });
</script>

