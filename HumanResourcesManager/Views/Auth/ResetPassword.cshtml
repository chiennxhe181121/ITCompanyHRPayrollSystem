@model HumanResourcesManager.BLL.DTOs.ResetPasswordDTO
@{
    Layout = null;
}

<div id="newPasswordStep" class="hidden">
    <div class="text-center mb-4">
        <h3 class="text-xl font-bold text-gray-900 mb-1">Đặt mật khẩu mới</h3>
        <p class="text-gray-600 text-sm">
            Nhập mật khẩu mới cho tài khoản của bạn.
        </p>
    </div>

    <div class="space-y-5">
        <div>
            <label for="newPassword" class="block text-sm font-semibold text-gray-700 mb-2">
                Mật khẩu mới
            </label>
            <input id="newPassword"
                   name="NewPassword"
                   type="password"
                   class="w-full px-4 py-3 bg-gray-50 border border-gray-300 text-gray-900 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                   placeholder="Nhập mật khẩu mới"
                   required />
        </div>

        <div>
            <label for="confirmNewPassword" class="block text-sm font-semibold text-gray-700 mb-2">
                Xác nhận mật khẩu mới
            </label>
            <input id="confirmNewPassword"
                   name="ConfirmPassword"
                   type="password"
                   class="w-full px-4 py-3 bg-gray-50 border border-gray-300 text-gray-900 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                   placeholder="Nhập lại mật khẩu mới"
                   required />
        </div>

        <div id="newPasswordErrorMessage"
             class="hidden flex items-start space-x-2 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl text-sm">
            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p id="newPasswordErrorText"></p>
        </div>

        <button type="button"
                id="setNewPasswordBtn"
                class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 rounded-xl shadow-lg hover:shadow-xl transition duration-200">
            Đặt lại mật khẩu
        </button>
    </div>
</div>
