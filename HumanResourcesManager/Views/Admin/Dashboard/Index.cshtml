@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="flex-1 overflow-y-auto bg-slate-50/50">
    <header class="bg-white border-b px-6 py-5">
        <h1 class="text-2xl font-semibold text-slate-800">
            Admin Dashboard
        </h1>
        <p class="text-slate-500 text-sm">
            Tổng quan hệ thống
        </p>
    </header>

    <div class="p-6 grid grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl p-5 border">
            <p class="text-xs text-slate-500">Tổng tài khoản</p>
            <p class="text-2xl font-bold">@(ViewBag.TotalUsers ?? 0)</p>
        </div>

        <div class="bg-white rounded-xl p-5 border">
            <p class="text-xs text-slate-500">Phòng ban</p>
            <p class="text-2xl font-bold">@(ViewBag.TotalDepartments ?? 0)</p>
        </div>

        <div class="bg-white rounded-xl p-5 border">
            <p class="text-xs text-slate-500">Chức vụ</p>
            <p class="text-2xl font-bold">@(ViewBag.TotalPositions ?? 0)</p>
        </div>

        <div class="bg-white rounded-xl p-5 border">
            <p class="text-xs text-slate-500">Tài khoản active</p>
            <p class="text-2xl font-bold">@(ViewBag.ActiveUsers ?? 0)</p>
        </div>
    </div>
</main>
