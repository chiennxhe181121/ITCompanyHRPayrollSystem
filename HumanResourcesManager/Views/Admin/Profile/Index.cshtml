@model HumanResourcesManager.BLL.DTOs.ADEmployee.AdminProfileDTO

@{
    ViewData["Title"] = "Hồ sơ của tôi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var now = DateTime.Now;
    var hire = Model.HireDate;

    int years = now.Year - hire.Year;
    int months = now.Month - hire.Month;
    int days = now.Day - hire.Day;

    if (days < 0)
    {
        months--;
        var prevMonth = now.AddMonths(-1);
        days += DateTime.DaysInMonth(prevMonth.Year, prevMonth.Month);
    }

    if (months < 0)
    {
        years--;
        months += 12;
    }

    string seniorityText = $"{years} năm, {months} tháng, {days} ngày";
    if (years == 0 && months == 0) seniorityText = $"{days} ngày";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


<div class="fixed top-5 right-5 z-50">
    @if (TempData["Success"] != null)
    {
        <div class="alert-toast bg-emerald-100 border border-emerald-400 text-emerald-700 px-4 py-3 rounded relative shadow-lg animate__animated animate__fadeInRight flex items-center gap-2">
            <i class="fa-solid fa-check-circle text-lg"></i>
            <span class="block sm:inline font-medium">@TempData["Success"]</span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert-toast bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative shadow-lg animate__animated animate__fadeInRight flex items-center gap-2">
            <i class="fa-solid fa-triangle-exclamation text-lg"></i>
            <span class="block sm:inline font-medium">@TempData["Error"]</span>
        </div>
    }
</div>

<div class="min-h-screen bg-slate-50 p-6">
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h2 class="text-2xl font-extrabold text-slate-800">Hồ sơ cá nhân</h2>
            <p class="text-sm text-slate-500">Quản lý thông tin tài khoản và thông tin liên hệ.</p>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data" class="grid grid-cols-1 lg:grid-cols-3 gap-6" id="profileForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="EmployeeId" />

        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 text-center relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-24 bg-gradient-to-r from-blue-600 to-indigo-600"></div>

                <div class="relative w-32 h-32 mx-auto -mt-2 mb-4 group">
                    @if (!string.IsNullOrEmpty(Model.ImgAvatar))
                    {
                        <img id="avatarPreview" src="@Model.ImgAvatar" class="w-full h-full rounded-full object-cover border-4 border-white shadow-md" />
                    }
                    else
                    {
                        <div class="w-full h-full rounded-full bg-indigo-500 text-white flex items-center justify-center text-4xl font-bold border-4 border-white shadow-md">
                            @Model.FullName?.Substring(0, 1).ToUpper()
                        </div>
                    }

                    <label for="avatarUpload" id="btnUploadAvatar" class="hidden absolute inset-0 bg-black/40 rounded-full flex items-center justify-center text-white cursor-pointer hover:bg-black/50 transition-all">
                        <i class="fa-solid fa-camera text-2xl"></i>
                    </label>
                    <input type="file" id="avatarUpload" asp-for="AvatarFile" class="hidden" accept="image/*" onchange="previewImage(this)" disabled />
                </div>

                <h3 class="text-xl font-bold text-slate-800">@Model.FullName</h3>

                <p class="text-sm text-blue-600 font-medium mb-1 mt-2">
                    @(string.IsNullOrEmpty(Model.PositionName) ? "(Chưa cập nhật chức vụ)" : Model.PositionName)
                </p>
                <p class="text-xs text-slate-500">
                    @(string.IsNullOrEmpty(Model.DepartmentName) ? "(Chưa cập nhật phòng ban)" : Model.DepartmentName)
                </p>

                <div class="mt-6 flex justify-center gap-2">
                    <span class="px-3 py-1 bg-slate-100 text-slate-600 text-xs rounded-full font-bold border border-slate-200">
                        <i class="fa-regular fa-id-badge mr-1"></i> @Model.EmployeeCode
                    </span>
                    <span class="px-3 py-1 bg-emerald-100 text-emerald-600 text-xs rounded-full font-bold border border-emerald-200">
                        <i class="fa-solid fa-circle-check mr-1"></i> Đang làm việc
                    </span>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 relative overflow-hidden group">
                <i class="fa-solid fa-briefcase absolute -right-4 -bottom-4 text-8xl text-slate-50 transform rotate-12 pointer-events-none transition-transform group-hover:scale-110"></i>

                <h4 class="text-xs font-bold text-slate-400 uppercase mb-5 tracking-wider flex items-center gap-2">
                    <i class="fa-solid fa-circle-info"></i> Thông tin công việc
                </h4>

                <div class="space-y-5 relative z-10">
                    <div class="flex justify-between items-start border-b border-slate-50 pb-3">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-lg bg-blue-50 text-blue-600 flex items-center justify-center">
                                <i class="fa-regular fa-calendar-check"></i>
                            </div>
                            <div>
                                <span class="block text-xs text-slate-500 uppercase font-bold">Ngày vào làm</span>
                                <span class="block text-sm font-bold text-slate-800">@Model.HireDate.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-between items-start border-b border-slate-50 pb-3">
                        <div class="flex items-center gap-3 w-full">
                            <div class="w-8 h-8 rounded-lg bg-amber-50 text-amber-600 flex items-center justify-center flex-shrink-0">
                                <i class="fa-solid fa-medal"></i>
                            </div>
                            <div class="w-full">
                                <div class="flex justify-between items-center">
                                    <span class="block text-xs text-slate-500 uppercase font-bold">Thâm niên</span>
                                    <span class="block text-sm font-bold text-amber-600">@years năm</span>
                                </div>
                                <p class="text-xs text-slate-400 mt-0.5">@seniorityText</p>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-between items-center">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-lg bg-purple-50 text-purple-600 flex items-center justify-center">
                                <i class="fa-solid fa-user-shield"></i>
                            </div>
                            <span class="text-xs text-slate-500 uppercase font-bold">Vai trò hệ thống</span>
                        </div>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-gradient-to-r from-purple-600 to-indigo-600 text-white text-xs font-bold shadow-md shadow-purple-200">
                            <i class="fa-solid fa-crown text-[10px]"></i> ADMIN
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-2">
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-8">

                <div class="flex items-center justify-between mb-6 pb-4 border-b border-slate-100">
                    <h3 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                        <i class="fa-solid fa-address-card text-blue-600"></i> Thông tin chi tiết
                    </h3>

                    <button type="button" id="btnEnableEdit" onclick="enableEditMode()"
                            class="px-5 py-2 bg-white border border-slate-200 text-slate-600 text-sm font-bold rounded-xl hover:bg-slate-50 hover:text-blue-600 transition-all shadow-sm">
                        <i class="fa-solid fa-pen-to-square mr-2"></i> Chỉnh sửa
                    </button>

                    <div id="actionButtons" class="hidden gap-3">
                        <button type="button" onclick="cancelEdit()"
                                class="px-5 py-2 bg-slate-100 text-slate-600 text-sm font-bold rounded-xl hover:bg-slate-200 transition-all">
                            Hủy bỏ
                        </button>
                        <button type="submit"
                                class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-bold rounded-xl shadow-lg shadow-blue-200 transition-all hover:-translate-y-0.5">
                            <i class="fa-solid fa-floppy-disk mr-2"></i> Lưu thay đổi
                        </button>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label asp-for="FullName" class="block text-xs font-bold text-slate-500 uppercase mb-1">Họ và tên</label>
                        <input asp-for="FullName" class="editable-field w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-500 font-bold focus:outline-none transition-all" disabled />
                        <span asp-validation-for="FullName" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-xs font-bold text-slate-500 uppercase mb-1">Email</label>
                        <div class="relative">
                            <i class="fa-regular fa-envelope absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                            <input asp-for="Email" class="editable-field w-full pl-10 pr-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-500 focus:outline-none transition-all" disabled />
                        </div>
                        <span asp-validation-for="Email" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Phone" class="block text-xs font-bold text-slate-500 uppercase mb-1">Số điện thoại</label>
                        <div class="relative">
                            <i class="fa-solid fa-phone absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                            <input asp-for="Phone" class="editable-field w-full pl-10 pr-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-500 focus:outline-none transition-all" disabled />
                        </div>
                        <span asp-validation-for="Phone" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Gender" class="block text-xs font-bold text-slate-500 uppercase mb-1">Giới tính</label>
                        <div class="relative">
                            <select asp-for="Gender" class="editable-field w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-500 appearance-none focus:outline-none transition-all" disabled>
                                <option value="true">Nam</option>
                                <option value="false">Nữ</option>
                            </select>
                            <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 text-xs pointer-events-none"></i>
                        </div>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Mã nhân viên</label>
                        <div class="relative">
                            <i class="fa-solid fa-lock absolute left-4 top-1/2 -translate-y-1/2 text-slate-300"></i>
                            <input value="@Model.EmployeeCode" disabled class="w-full pl-10 pr-4 py-2.5 bg-slate-100 border border-slate-200 rounded-xl text-slate-400 cursor-not-allowed font-mono" />
                        </div>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-xs font-bold text-slate-500 uppercase mb-1">Địa chỉ thường trú</label>
                        <textarea asp-for="Address" rows="3" class="editable-field w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-500 focus:outline-none transition-all" disabled></textarea>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    // 1. Chế độ chỉnh sửa
    function enableEditMode() {
        document.getElementById('btnEnableEdit').classList.add('hidden');
        document.getElementById('actionButtons').classList.remove('hidden');
        document.getElementById('actionButtons').classList.add('flex');

        const inputs = document.querySelectorAll('.editable-field');
        inputs.forEach(input => {
            input.disabled = false;
            input.classList.remove('bg-slate-50', 'text-slate-500');
            input.classList.add('bg-white', 'text-slate-800', 'focus:ring-2', 'focus:ring-blue-500', 'focus:border-blue-500');
        });

        document.getElementById('btnUploadAvatar').classList.remove('hidden');
        document.getElementById('btnUploadAvatar').classList.add('flex');
        document.getElementById('avatarUpload').disabled = false;
    }

    // 2. Hủy bỏ -> Reload
    function cancelEdit() {
        location.reload();
    }

    // 3. Preview Ảnh
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                var img = document.getElementById('avatarPreview');
                if(img) img.src = e.target.result;
                else location.reload();
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    // 4. Auto Hide Notification
    document.addEventListener("DOMContentLoaded", function () {
        const alerts = document.querySelectorAll(".alert-toast");
        if (alerts.length > 0) {
            setTimeout(() => {
                alerts.forEach(el => {
                    el.classList.remove("animate__fadeInRight");
                    el.classList.add("animate__fadeOutRight");
                    el.addEventListener('animationend', () => el.remove());
                });
            }, 2000);
        }
    });
</script>