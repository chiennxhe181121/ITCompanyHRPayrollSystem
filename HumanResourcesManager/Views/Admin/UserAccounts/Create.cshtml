@model HumanResourcesManager.BLL.DTOs.UserAccount.UserAccountCreateDTO

@{
    ViewData["Title"] = "Thêm tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6 max-w-xl">
    <h2 class="text-lg font-semibold mb-4">Thêm tài khoản</h2>

    <form asp-controller="UserAccounts"
          asp-action="Create"
          method="post"
          class="space-y-4">

        <!-- 🔥 SUMMARY ERROR (ẩn mặc định, chỉ hiện khi có lỗi) -->
        <div id="validationSummary"
             asp-validation-summary="All"
             class="hidden text-red-500 text-sm bg-red-50 border border-red-200 rounded-lg px-3 py-2">
        </div>

        <!-- USERNAME -->
        <div>
            <label asp-for="Username" class="block text-sm font-medium"></label>
            <input asp-for="Username"
                   class="w-full border rounded-lg px-3 py-2" />
            <span asp-validation-for="Username"
                  class="text-sm text-red-500"></span>
        </div>

        <!-- PASSWORD + 👁 -->
        <div>
            <label asp-for="Password" class="block text-sm font-medium"></label>

            <div class="relative">
                <input asp-for="Password"
                       id="passwordInput"
                       type="password"
                       class="w-full border rounded-lg px-3 py-2 pr-10" />

                <button type="button"
                        onclick="togglePassword()"
                        class="absolute inset-y-0 right-2 flex items-center text-gray-500">
                    👁
                </button>
            </div>

            <span asp-validation-for="Password"
                  class="text-sm text-red-500"></span>
        </div>

        <!-- ROLE -->
        <div>
            <label asp-for="RoleId" class="block text-sm font-medium"></label>
            <select asp-for="RoleId"
                    class="w-full border rounded-lg px-3 py-2">
                <option value="">-- Chọn vai trò --</option>
                <option value="1">Employee</option>
                <option value="2">HR</option>
                <option value="3">Admin</option>
                <option value="4">Manager</option>
            </select>
            <span asp-validation-for="RoleId"
                  class="text-sm text-red-500"></span>
        </div>

        <!-- FULL NAME (optional) -->
        <div>
            <label asp-for="FullName" class="block text-sm font-medium">
                Họ tên (nếu tạo kèm nhân viên)
            </label>
            <input asp-for="FullName"
                   class="w-full border rounded-lg px-3 py-2" />
            <span asp-validation-for="FullName"
                  class="text-sm text-red-500"></span>
        </div>

        <!-- EMAIL (optional) -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium">
                Email (nếu tạo kèm nhân viên)
            </label>
            <input asp-for="Email"
                   type="email"
                   class="w-full border rounded-lg px-3 py-2" />
            <span asp-validation-for="Email"
                  class="text-sm text-red-500"></span>
        </div>

        <!-- ACTION -->
        <div class="flex gap-3 pt-2">
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
                Lưu
            </button>

            <a asp-controller="UserAccounts"
               asp-action="Index"
               class="px-4 py-2 border rounded-lg">
                Huỷ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // 👉 Hiện summary khi có lỗi
        document.addEventListener("DOMContentLoaded", function () {
            const summary = document.getElementById("validationSummary");
            if (summary && summary.innerText.trim().length > 0) {
                summary.classList.remove("hidden");
            }
        });

        // 👉 Toggle password 👁
        function togglePassword() {
            const input = document.getElementById("passwordInput");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}
