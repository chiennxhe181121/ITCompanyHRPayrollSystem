@model HumanResourcesManager.BLL.DTOs.UserAccount.UserAccountCreateDTO

@{
    ViewData["Title"] = "Thêm tài khoản mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen bg-slate-50 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-slate-900">Thêm tài khoản mới</h1>
            <p class="mt-2 text-sm text-slate-600">Tạo tài khoản đăng nhập và hồ sơ nhân viên đi kèm.</p>
        </div>

        <form asp-controller="UserAccounts"
              asp-action="Create"
              method="post"
              class="bg-white shadow-xl rounded-2xl overflow-hidden">
            
            <div id="validationSummary" 
                 asp-validation-summary="ModelOnly" 
                 class="hidden bg-red-50 border-l-4 border-red-500 p-4 m-6 mb-0">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fa-solid fa-circle-exclamation text-red-500"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-700 font-medium">Vui lòng kiểm tra lại các lỗi sau:</p>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-8">
                
                <div class="space-y-6">
                    <div class="border-b border-slate-100 pb-2 mb-4">
                        <h3 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
                            <span class="w-8 h-8 rounded-lg bg-indigo-100 text-indigo-600 flex items-center justify-center text-sm">
                                <i class="fa-solid fa-user-lock"></i>
                            </span>
                            Thông tin đăng nhập
                        </h3>
                    </div>

                    <div>
                        <label asp-for="Username" class="block text-sm font-medium text-slate-700 mb-1">Tên đăng nhập <span class="text-red-500">*</span></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fa-solid fa-user text-slate-400 text-sm"></i>
                            </div>
                            <input asp-for="Username" 
                                   class="pl-10 block w-full rounded-lg border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 transition-shadow" 
                                   placeholder="VD: huyhoang8386" />
                        </div>
                        <span asp-validation-for="Username" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-slate-700 mb-1">Mật khẩu <span class="text-red-500">*</span></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fa-solid fa-lock text-slate-400 text-sm"></i>
                            </div>
                            <input asp-for="Password" 
                                   id="passwordInput"
                                   type="password" 
                                   class="pl-10 pr-10 block w-full rounded-lg border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 transition-shadow" 
                                   placeholder="••••••••" />
                            <button type="button" 
                                    onclick="togglePassword()"
                                    class="absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-indigo-600 cursor-pointer transition-colors focus:outline-none">
                                <i class="fa-regular fa-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="RoleId" class="block text-sm font-medium text-slate-700 mb-1">Vai trò <span class="text-red-500">*</span></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fa-solid fa-shield-halved text-slate-400 text-sm"></i>
                            </div>
                            <select asp-for="RoleId" class="pl-10 block w-full rounded-lg border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 transition-shadow cursor-pointer bg-white">
                                <option value="">-- Chọn vai trò hệ thống --</option>
                                <option value="1">Employee (Nhân viên)</option>
                                <option value="2">HR (Nhân sự)</option>
                                <option value="3">Admin (Quản trị viên)</option>
                                <option value="4">Manager (Quản lý)</option>
                            </select>
                        </div>
                        <span asp-validation-for="RoleId" class="text-xs text-red-500 mt-1 block"></span>
                    </div>
                </div>

                <div class="bg-slate-50 rounded-xl p-6 border border-slate-200">
                    <div class="border-b border-slate-200 pb-2 mb-4">
                        <h3 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
                            <span class="w-8 h-8 rounded-lg bg-emerald-100 text-emerald-600 flex items-center justify-center text-sm">
                                <i class="fa-solid fa-id-card"></i>
                            </span>
                            Hồ sơ nhân viên
                        </h3>
                        <p class="text-xs text-slate-500 mt-1">Điền thông tin bên dưới nếu muốn tạo hồ sơ nhân viên tự động.</p>
                    </div>

                    <div class="space-y-5">
                        <div>
                            <label asp-for="FullName" class="block text-sm font-medium text-slate-700 mb-1">Họ và tên</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fa-regular fa-id-badge text-slate-400 text-sm"></i>
                                </div>
                                <input asp-for="FullName" 
                                       class="pl-10 block w-full rounded-lg border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 transition-shadow bg-white" 
                                       placeholder="VD: Đào Huy Hoàng" />
                            </div>
                            <span asp-validation-for="FullName" class="text-xs text-red-500 mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1">Email liên hệ</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fa-regular fa-envelope text-slate-400 text-sm"></i>
                                </div>
                                <input asp-for="Email" 
                                       type="email"
                                       class="pl-10 block w-full rounded-lg border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2.5 transition-shadow bg-white" 
                                       placeholder="VD: example@company.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-xs text-red-500 mt-1 block"></span>
                        </div>

                        <div class="bg-blue-50 rounded-lg p-3 flex gap-3 border border-blue-100 mt-4">
                            <i class="fa-solid fa-circle-info text-blue-500 mt-0.5"></i>
                            <p class="text-xs text-blue-700 leading-relaxed">
                                Nếu để trống phần này, tài khoản sẽ được tạo nhưng chưa liên kết với hồ sơ nhân viên nào. Bạn có thể cập nhật sau.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="px-8 py-5 bg-slate-50 border-t border-slate-100 flex items-center justify-end gap-3">
                <a asp-controller="UserAccounts" 
                   asp-action="Index" 
                   class="px-5 py-2.5 rounded-lg border border-slate-300 bg-white text-slate-700 hover:bg-slate-50 font-medium text-sm transition-colors shadow-sm">
                    Quay lại
                </a>
                <button type="submit" 
                        class="px-5 py-2.5 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-medium text-sm shadow-md hover:shadow-lg transition-all flex items-center gap-2">
                    <i class="fa-solid fa-check"></i> Tạo tài khoản
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // 👉 Hiện summary khi có lỗi
        document.addEventListener("DOMContentLoaded", function () {
            const summary = document.getElementById("validationSummary");
            // Kiểm tra nếu validation summary có chứa list lỗi (thẻ ul/li bên trong do asp-validation-summary="All" hoặc "ModelOnly" sinh ra)
            if (summary && summary.querySelector(".validation-summary-errors")) {
                summary.classList.remove("hidden");
            }
        });

        // 👉 Toggle password 👁
        function togglePassword() {
            const input = document.getElementById("passwordInput");
            const icon = document.getElementById("eyeIcon");
            
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
}