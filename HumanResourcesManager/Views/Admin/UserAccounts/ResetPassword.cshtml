@model HumanResourcesManager.BLL.DTOs.UserAccount.UserAccountResetPasswordDTO

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8 bg-slate-50 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none">
        <div class="absolute -top-24 -left-24 w-96 h-96 rounded-full bg-amber-100 mix-blend-multiply filter blur-3xl opacity-50 animate-blob"></div>
        <div class="absolute top-0 -right-4 w-72 h-72 rounded-full bg-orange-100 mix-blend-multiply filter blur-3xl opacity-50 animate-blob animation-delay-2000"></div>
    </div>

    <div class="relative z-10 sm:mx-auto sm:w-full sm:max-w-lg">
        <div class="text-center mb-8">
            <div class="mx-auto h-20 w-20 bg-white rounded-2xl shadow-lg flex items-center justify-center mb-4 transform rotate-3 hover:rotate-0 transition-transform duration-300">
                <i class="fa-solid fa-shield-keyhole text-4xl text-amber-500"></i>
            </div>
            <h2 class="text-3xl font-extrabold text-slate-800 tracking-tight">
                Thiết lập mật khẩu mới
            </h2>
            <p class="mt-2 text-sm text-slate-500">
                Hành động này sẽ thay đổi thông tin đăng nhập ngay lập tức.
            </p>
        </div>

        <div class="bg-white py-8 px-4 shadow-2xl shadow-slate-200/50 rounded-2xl sm:px-10 border-t-4 border-amber-500 relative">

            <form method="post" action="/HumanResourcesManager/admin/UserAccounts/ResetPassword" class="space-y-6">
                <input asp-for="UserId" type="hidden" />

                <div id="validationSummary" asp-validation-summary="All" class="hidden rounded-lg bg-red-50 border border-red-200 p-4 mb-4 text-sm text-red-600"></div>

                <div class="relative group">
                    <div class="absolute -inset-0.5 bg-gradient-to-r from-slate-200 to-slate-100 rounded-xl opacity-75 group-hover:opacity-100 transition duration-200 blur-[1px]"></div>
                    <div class="relative flex items-center gap-4 bg-white p-4 rounded-xl border border-slate-200">
                        <div class="flex-shrink-0 h-12 w-12 rounded-full bg-slate-100 flex items-center justify-center text-slate-500 font-bold text-lg border border-slate-100">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs text-slate-500 font-medium uppercase tracking-wide mb-0.5">Tài khoản đích</p>
                            <p class="text-sm font-bold text-slate-900 truncate">
                                User ID: <span class="font-mono text-indigo-600">#@Model.UserId</span>
                            </p>
                        </div>
                        <div class="text-green-500 text-xl" title="Verified User">
                            <i class="fa-solid fa-circle-check"></i>
                        </div>
                    </div>
                </div>

                <div class="space-y-1">
                    <label asp-for="NewPassword" class="block text-sm font-bold text-slate-700">
                        Mật khẩu mới
                    </label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-lock text-slate-400 group-focus-within:text-amber-500 transition-colors"></i>
                        </div>

                        <input asp-for="NewPassword"
                               id="newPasswordInput"
                               type="password"
                               class="pl-10 pr-12 block w-full rounded-xl border-slate-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm py-3 transition-all"
                               placeholder="Nhập mật khẩu tối thiểu 8 ký tự..."
                               onkeyup="checkStrength(this.value)" />

                        <button type="button"
                                onclick="togglePassword()"
                                class="absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-amber-600 cursor-pointer focus:outline-none transition-colors">
                            <i class="fa-regular fa-eye" id="eyeIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-xs text-red-500 block pt-1"></span>

                    <div class="mt-3 transition-all duration-300 ease-in-out h-0 overflow-hidden" id="strengthContainer">
                        <div class="flex items-center justify-between mb-1">
                            <span class="text-xs font-medium text-slate-500" id="strengthText">Độ mạnh mật khẩu</span>
                            <span class="text-xs font-bold text-slate-400" id="strengthLabel">Trống</span>
                        </div>
                        <div class="w-full bg-slate-200 rounded-full h-1.5">
                            <div class="bg-red-500 h-1.5 rounded-full transition-all duration-500" style="width: 0%" id="strengthBar"></div>
                        </div>
                        <ul class="mt-2 space-y-1 text-xs text-slate-500 pl-1">
                            <li id="rule-length" class="flex items-center gap-2"><i class="fa-solid fa-circle text-[6px] text-slate-300"></i> Ít nhất 8 ký tự</li>
                            <li id="rule-num" class="flex items-center gap-2"><i class="fa-solid fa-circle text-[6px] text-slate-300"></i> Có chứa số</li>
                        </ul>
                    </div>
                </div>

                <div class="flex items-center gap-4 pt-4 mt-6">
                    <a href="/HumanResourcesManager/admin/UserAccounts"
                       class="flex-1 py-3 px-4 border border-slate-300 rounded-xl shadow-sm text-sm font-semibold text-slate-600 bg-white hover:bg-slate-50 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition-all text-center">
                        Hủy bỏ
                    </a>

                    <button type="submit"
                            class="flex-[2] flex justify-center items-center gap-2 py-3 px-4 border border-transparent rounded-xl shadow-lg shadow-amber-500/30 text-sm font-bold text-white bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transform hover:-translate-y-0.5 transition-all">
                        <i class="fa-solid fa-check-circle"></i> Xác nhận thay đổi
                    </button>
                </div>
            </form>
        </div>

        <p class="text-center text-xs text-slate-400 mt-8 font-medium">
            <i class="fa-solid fa-lock text-xs mr-1"></i> Secure Connection • Admin Access Only
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const summary = document.getElementById("validationSummary");
            if (summary && summary.querySelector("li")) {
                summary.classList.remove("hidden");
            }
        });

        function togglePassword() {
            const input = document.getElementById("newPasswordInput");
            const icon = document.getElementById("eyeIcon");
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        // Logic check độ mạnh mật khẩu
        function checkStrength(password) {
            const container = document.getElementById('strengthContainer');
            const bar = document.getElementById('strengthBar');
            const label = document.getElementById('strengthLabel');

            if(password.length > 0) {
                container.classList.remove('h-0');
                container.classList.add('h-auto', 'mt-3');
            } else {
                container.classList.add('h-0');
                container.classList.remove('mt-3');
            }

            let strength = 0;

            // Rule 1: Độ dài
            const ruleLength = document.getElementById('rule-length');
            if (password.length >= 8) {
                strength += 1;
                ruleLength.classList.add('text-green-600');
                ruleLength.querySelector('i').classList.replace('text-slate-300', 'text-green-500');
            } else {
                ruleLength.classList.remove('text-green-600');
                ruleLength.querySelector('i').classList.replace('text-green-500', 'text-slate-300');
            }

            // Rule 2: Có số
            const ruleNum = document.getElementById('rule-num');
            if (/\d/.test(password)) {
                strength += 1;
                ruleNum.classList.add('text-green-600');
                ruleNum.querySelector('i').classList.replace('text-slate-300', 'text-green-500');
            } else {
                ruleNum.classList.remove('text-green-600');
                ruleNum.querySelector('i').classList.replace('text-green-500', 'text-slate-300');
            }

            // Bonus: Ký tự đặc biệt hoặc chữ hoa
            if (/[A-Z]/.test(password) || /[^A-Za-z0-9]/.test(password)) {
                strength += 1;
            }

            // Update UI Bar
            if (strength === 0) {
                bar.style.width = '0%';
                bar.className = 'h-1.5 rounded-full transition-all duration-500 bg-slate-200';
                label.innerText = 'Trống';
                label.className = 'text-xs font-bold text-slate-400';
            } else if (strength === 1) {
                bar.style.width = '33%';
                bar.className = 'h-1.5 rounded-full transition-all duration-500 bg-red-500';
                label.innerText = 'Yếu';
                label.className = 'text-xs font-bold text-red-500';
            } else if (strength === 2) {
                bar.style.width = '66%';
                bar.className = 'h-1.5 rounded-full transition-all duration-500 bg-amber-500';
                label.innerText = 'Trung bình';
                label.className = 'text-xs font-bold text-amber-500';
            } else if (strength >= 3) {
                bar.style.width = '100%';
                bar.className = 'h-1.5 rounded-full transition-all duration-500 bg-emerald-500 shadow-[0_0_10px_rgba(16,185,129,0.5)]';
                label.innerText = 'Mạnh';
                label.className = 'text-xs font-bold text-emerald-600';
            }
        }
    </script>

    <style>
        @@keyframes blob {
            0% {
                transform: translate(0px, 0px) scale(1);
            }

            33% {
                transform: translate(30px, -50px) scale(1.1);
            }

            66% {
                transform: translate(-20px, 20px) scale(0.9);
            }

            100% {
                transform: translate(0px, 0px) scale(1);
            }
        }

        .animate-blob {
            animation: blob 7s infinite;
        }

        .animation-delay-2000 {
            animation-delay: 2s;
        }
    </style>
}