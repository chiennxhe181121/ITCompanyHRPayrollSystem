@model HumanResourcesManager.BLL.DTOs.UserAccount.UserAccountResetPasswordDTO

@{
    ViewData["Title"] = "Reset mật khẩu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6 max-w-md">
    <h2 class="text-lg font-semibold mb-4">Reset mật khẩu</h2>

    <form method="post"
          action="/HumanResourcesManager/admin/UserAccounts/ResetPassword"
          class="space-y-4">

        <input asp-for="UserId" type="hidden" />

        <!-- SUMMARY ERROR (ẩn mặc định) -->
        <div id="validationSummary"
             asp-validation-summary="All"
             class="hidden text-red-500 text-sm bg-red-50 border border-red-200 rounded-lg px-3 py-2">
        </div>

        <!-- PASSWORD + 👁 -->
        <div>
            <label asp-for="NewPassword"
                   class="block text-sm font-medium">
                Mật khẩu mới
            </label>

            <div class="relative">
                <input asp-for="NewPassword"
                       id="newPasswordInput"
                       type="password"
                       class="w-full border rounded-lg px-3 py-2 pr-10" />

                <button type="button"
                        onclick="togglePassword()"
                        class="absolute inset-y-0 right-2 flex items-center text-gray-500">
                    👁
                </button>
            </div>

            <span asp-validation-for="NewPassword"
                  class="text-sm text-red-500"></span>
        </div>

        <div class="flex gap-3">
            <button type="submit"
                    class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg">
                Reset
            </button>

            <a href="/HumanResourcesManager/admin/UserAccounts"
               class="px-4 py-2 border rounded-lg">
                Huỷ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Hiện summary khi có lỗi
        document.addEventListener("DOMContentLoaded", function () {
            const summary = document.getElementById("validationSummary");
            if (summary && summary.innerText.trim().length > 0) {
                summary.classList.remove("hidden");
            }
        });

        // Toggle password 👁
        function togglePassword() {
            const input = document.getElementById("newPasswordInput");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}
