@model HumanResourcesManager.BLL.DTOs.UserAccount.UserAccountUpdateDTO
@using HumanResourcesManager.DAL.Shared

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6 max-w-xl">
    <h2 class="text-lg font-semibold mb-4">Chỉnh sửa tài khoản</h2>

    <form asp-controller="UserAccounts"
          asp-action="Edit"
          method="post"
          class="space-y-4">

        <!-- Hidden -->
        <input asp-for="UserId" type="hidden" />

        <!-- ROLE -->
        <div>
            <label asp-for="RoleCode" class="block text-sm font-medium">
                Vai trò
            </label>

            <select asp-for="RoleCode"
                    class="w-full border rounded-lg px-3 py-2">
                <option value="">-- Chọn vai trò --</option>
                <option value="EMP">Employee</option>
                <option value="HR">HR</option>
                <option value="ADMIN">Admin</option>
            </select>

            <span asp-validation-for="RoleCode"
                  class="text-sm text-red-500"></span>
        </div>

        <!-- STATUS -->
        <div>
            <label asp-for="Status" class="block text-sm font-medium">
                Trạng thái
            </label>

            <select asp-for="Status"
                    class="w-full border rounded-lg px-3 py-2">
                <option value="@Constants.Active">Active</option>
                <option value="@Constants.Inactive">Inactive</option>
            </select>

            <span asp-validation-for="Status"
                  class="text-sm text-red-500"></span>
        </div>

        <!-- ACTION -->
        <div class="flex gap-3 pt-2">
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
                Cập nhật
            </button>

            <a asp-controller="UserAccounts"
               asp-action="Index"
               class="px-4 py-2 border rounded-lg">
                Huỷ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
