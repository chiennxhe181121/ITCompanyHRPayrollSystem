@model IEnumerable<HumanResourcesManager.BLL.DTOs.UserAccount.UserAccountDTO>
@using HumanResourcesManager.DAL.Shared
@using System.Security.Claims

@{
    ViewData["Title"] = "Quản Lý Tài Khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string keyword = Context.Request.Query["keyword"];
    string roleCode = Context.Request.Query["roleCode"];
    string status = Context.Request.Query["status"];

    int currentUserId = 0;
    int.TryParse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value, out currentUserId);

    int stt = (ViewBag.CurrentPage - 1) * 10;
}

@if (TempData["Error"] != null)
{
    <div id="alert-error" class="mb-4 px-4 py-3 rounded-lg bg-red-100 text-red-700 border border-red-200 flex items-center gap-2 shadow-sm">
        <i class="fa-solid fa-circle-exclamation text-lg"></i>
        <span class="font-medium">@TempData["Error"]</span>
    </div>
}

<div class="px-6 py-5 bg-white border-b border-slate-200 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
    <div>
        <h2 class="text-xl font-bold text-slate-800">Quản Lý Tài Khoản</h2>
        <p class="text-sm text-slate-500 mt-1">Danh sách tài khoản người dùng hệ thống.</p>
    </div>

    <a href="/HumanResourcesManager/admin/UserAccounts/Create"
       class="inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-lg text-sm font-medium transition-all shadow-sm hover:shadow-md hover:-translate-y-0.5">
        <i class="fa-solid fa-plus"></i> Thêm tài khoản
    </a>
</div>

<div class="px-6 py-4 bg-slate-50 border-b border-slate-200">
    <form method="get" class="flex flex-wrap gap-3 items-end">
        <div class="w-full sm:w-auto flex-grow">
            <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Tìm kiếm</label>
            <div class="relative group">
                <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-indigo-500 transition-colors"></i>
                <input name="keyword" value="@keyword" placeholder="Nhập Username, Tên, Email..."
                       class="pl-9 pr-3 py-2 border border-slate-300 rounded-lg w-full focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none text-sm transition-shadow shadow-sm" />
            </div>
        </div>

        <div>
            <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Vai trò</label>
            <select name="roleCode" class="border border-slate-300 rounded-lg px-3 py-2 w-36 text-sm focus:ring-2 focus:ring-indigo-500 outline-none shadow-sm cursor-pointer hover:border-indigo-400">
                <option value="">-- Tất cả --</option>
                <option value="ADMIN" selected="@(roleCode == "ADMIN")">Admin</option>
                <option value="HR" selected="@(roleCode == "HR")">HR</option>
                <option value="EMP" selected="@(roleCode == "EMP")">Employee</option>
            </select>
        </div>

        <div>
            <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Trạng thái</label>
            <select name="status" class="border border-slate-300 rounded-lg px-3 py-2 w-32 text-sm focus:ring-2 focus:ring-indigo-500 outline-none shadow-sm cursor-pointer hover:border-indigo-400">
                <option value="">-- Tất cả --</option>
                <option value="Active" selected="@(status == "Active")">Active</option>
                <option value="Inactive" selected="@(status == "Inactive")">Inactive</option>
            </select>
        </div>

        <div class="flex gap-2">
            <button class="bg-slate-800 hover:bg-slate-900 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm">
                <i class="fa-solid fa-filter mr-1"></i> Lọc
            </button>
            <a href="/HumanResourcesManager/admin/UserAccounts"
               class="bg-white hover:bg-slate-100 text-slate-600 border border-slate-300 px-3 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm"
               title="Reset bộ lọc">
                <i class="fa-solid fa-rotate-right"></i>
            </a>
        </div>
    </form>
</div>

<div class="p-6 bg-slate-100 min-h-screen">
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="bg-slate-50 text-slate-600 font-bold uppercase text-xs tracking-wider border-b border-slate-200">
                    <tr>
                        <th class="px-6 py-4 text-center w-14">STT</th>
                        <th class="px-6 py-4">Username</th>
                        <th class="px-6 py-4">Họ tên</th>
                        <th class="px-6 py-4">Email</th>
                        <th class="px-6 py-4 text-center">Role</th>
                        <th class="px-6 py-4 text-center">Trạng thái</th>
                        <th class="px-6 py-4 text-right">Hành động</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-slate-100">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="py-12 text-center text-slate-500 flex flex-col items-center justify-center">
                                <div class="bg-slate-50 p-4 rounded-full mb-3 shadow-sm border border-slate-100">
                                    <i class="fa-solid fa-magnifying-glass text-3xl text-slate-300"></i>
                                </div>
                                <span class="font-medium">Không tìm thấy tài khoản nào</span>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var u in Model)
                        {
                            bool isSelf = (u.UserId == currentUserId);
                            bool isAdmin = (u.RoleName == "Admin");
                            bool canEdit = isSelf || !isAdmin;

                            <tr class="hover:bg-indigo-50/30 transition-colors group">
                                <td class="px-6 py-4 text-center text-slate-400 font-medium">
                                    @(++stt)
                                </td>

                                <td class="px-6 py-4">
                                    <span class="font-bold text-indigo-700 text-sm block min-w-[100px]">
                                        @u.Username
                                    </span>
                                </td>

                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3 min-w-[180px]">
                                        <div class="w-8 h-8 rounded-full bg-slate-200 text-slate-600 flex items-center justify-center text-xs font-bold border border-white shadow-sm">
                                            @(string.IsNullOrEmpty(u.FullName) ? "?" : u.FullName[0].ToString().ToUpper())
                                        </div>
                                        <span class="font-medium text-slate-700">@u.FullName</span>
                                    </div>
                                </td>

                                <td class="px-6 py-4 text-slate-500">
                                    @u.Email
                                </td>

                                <td class="px-6 py-4 text-center">
                                    @if (u.RoleCode == "ADMIN" || u.RoleName == "Admin")
                                    {
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded border border-purple-200 bg-purple-100 text-purple-700 text-xs font-bold shadow-sm">
                                            <i class="fa-solid fa-shield-cat"></i> ADMIN
                                        </span>
                                    }
                                    else if (u.RoleCode == "HR" || u.RoleName == "HR")
                                    {
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded border border-blue-200 bg-blue-100 text-blue-700 text-xs font-bold shadow-sm">
                                            <i class="fa-solid fa-user-tie"></i> HR
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded border border-slate-200 bg-slate-100 text-slate-600 text-xs font-bold shadow-sm">
                                            <i class="fa-solid fa-user"></i> EMPLOYEE
                                        </span>
                                    }
                                </td>

                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center gap-2">
                                        @if (u.Status == Constants.Active)
                                        {
                                            <span class="relative flex h-2.5 w-2.5">
                                                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                                                <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"></span>
                                            </span>
                                            <span class="text-emerald-700 font-bold text-xs">Active</span>
                                        }
                                        else
                                        {
                                            <span class="h-2.5 w-2.5 rounded-full bg-red-500"></span>
                                            <span class="text-red-700 font-bold text-xs">Inactive</span>
                                        }
                                    </div>
                                </td>

                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-1 opacity-80 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity">

                                        @if (canEdit)
                                        {
                                            <a href="/HumanResourcesManager/admin/UserAccounts/Edit/@u.UserId"
                                               class="w-8 h-8 rounded flex items-center justify-center bg-white border border-slate-200 text-blue-600 hover:bg-blue-600 hover:text-white hover:border-blue-600 transition-all shadow-sm"
                                               title="Sửa thông tin">
                                                <i class="fa-solid fa-pen text-xs"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="w-8 h-8 rounded flex items-center justify-center bg-slate-50 border border-slate-100 text-slate-300 cursor-not-allowed">
                                                <i class="fa-solid fa-pen text-xs"></i>
                                            </span>
                                        }

                                        <a href="/HumanResourcesManager/admin/UserAccounts/ResetPassword/@u.UserId"
                                           class="w-8 h-8 rounded flex items-center justify-center bg-white border border-slate-200 text-amber-500 hover:bg-amber-500 hover:text-white hover:border-amber-500 transition-all shadow-sm"
                                           title="Đặt lại mật khẩu">
                                            <i class="fa-solid fa-key text-xs"></i>
                                        </a>

                                        @if (u.Status == Constants.Active)
                                        {
                                            <form method="post" action="/HumanResourcesManager/admin/UserAccounts/Inactive/@u.UserId"
                                                  class="inline-block"
                                                  onsubmit="return confirmLock(event, this)">
                                                <button type="submit"
                                                        class="w-8 h-8 rounded flex items-center justify-center bg-white border border-slate-200 text-red-500 hover:bg-red-500 hover:text-white hover:border-red-500 transition-all shadow-sm"
                                                        title="Khóa tài khoản">
                                                    <i class="fa-solid fa-lock text-xs"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="post" action="/HumanResourcesManager/admin/UserAccounts/Active/@u.UserId"
                                                  class="inline-block"
                                                  onsubmit="return confirmUnlock(event, this)">
                                                <button type="submit"
                                                        class="w-8 h-8 rounded flex items-center justify-center bg-white border border-slate-200 text-emerald-500 hover:bg-emerald-500 hover:text-white hover:border-emerald-500 transition-all shadow-sm"
                                                        title="Mở khóa">
                                                    <i class="fa-solid fa-lock-open text-xs"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="px-6 py-4 border-t border-slate-200 bg-slate-50 flex justify-center">
                <nav class="flex gap-1">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a class="w-8 h-8 flex items-center justify-center bg-white border border-slate-300 rounded hover:bg-indigo-50 text-slate-600 transition-colors"
                           href="?page=@(ViewBag.CurrentPage - 1)&keyword=@keyword&roleCode=@roleCode&status=@status">
                            <i class="fa-solid fa-chevron-left text-xs"></i>
                        </a>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <a class="w-8 h-8 flex items-center justify-center rounded text-sm font-bold border transition-colors @(i == ViewBag.CurrentPage ? "bg-indigo-600 text-white border-indigo-600 shadow-md" : "bg-white border-slate-300 text-slate-600 hover:bg-slate-50")"
                           href="?page=@i&keyword=@keyword&roleCode=@roleCode&status=@status">
                            @i
                        </a>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a class="w-8 h-8 flex items-center justify-center bg-white border border-slate-300 rounded hover:bg-indigo-50 text-slate-600 transition-colors"
                           href="?page=@(ViewBag.CurrentPage + 1)&keyword=@keyword&roleCode=@roleCode&status=@status">
                            <i class="fa-solid fa-chevron-right text-xs"></i>
                        </a>
                    }
                </nav>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alert = document.getElementById("alert-error");
        if (alert) {
            setTimeout(() => {
                alert.style.transition = "opacity 0.5s ease";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            }, 3000);
        }
    });

    function confirmLock(e, form) {
        e.preventDefault();
        Swal.fire({
            title: 'Khoá tài khoản?',
            text: "Tài khoản này sẽ không thể đăng nhập!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#64748b',
            confirmButtonText: 'Khoá ngay',
            cancelButtonText: 'Huỷ'
        }).then((result) => {
            if (result.isConfirmed) form.submit();
        });
        return false;
    }

    function confirmUnlock(e, form) {
        e.preventDefault();
        Swal.fire({
            title: 'Mở khoá?',
            text: "Khôi phục quyền truy cập cho tài khoản.",
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#10b981',
            cancelButtonColor: '#64748b',
            confirmButtonText: 'Mở khoá',
            cancelButtonText: 'Huỷ'
        }).then((result) => {
            if (result.isConfirmed) form.submit();
        });
        return false;
    }
</script>