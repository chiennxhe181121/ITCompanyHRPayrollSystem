@model IEnumerable<HumanResourcesManager.DAL.Models.Employee>

@{
    ViewData["Title"] = "Quản Lý Nhân Sự";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Lấy thông tin User hiện tại để chặn xóa chính mình
    var currentEmail = User.Identity?.Name ?? "";

    // Params Filter
    string keyword = ViewBag.Keyword as string;
    int? deptId = ViewBag.DeptId as int?;
    int? posId = ViewBag.PosId as int?;
    int? status = ViewBag.Status as int?;

    // Pagination
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int stt = (currentPage - 1) * 10;
}



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div id="notification-area" class="fixed top-5 right-5 z-50 space-y-2 pointer-events-none">
    @if (TempData["Error"] != null)
    {
        <div class="alert-toast pointer-events-auto flex items-center w-full max-w-xs p-4 text-gray-500 bg-white rounded-xl shadow-lg border-l-4 border-red-500 animate__animated animate__fadeInRight">
            <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg">
                <i class="fa-solid fa-circle-exclamation"></i>
            </div>
            <div class="ml-3 text-sm font-medium text-red-600">@TempData["Error"]</div>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert-toast pointer-events-auto flex items-center w-full max-w-xs p-4 text-gray-500 bg-white rounded-xl shadow-lg border-l-4 border-emerald-500 animate__animated animate__fadeInRight">
            <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-emerald-500 bg-emerald-100 rounded-lg">
                <i class="fa-solid fa-circle-check"></i>
            </div>
            <div class="ml-3 text-sm font-medium text-emerald-600">@TempData["Success"]</div>
        </div>
    }
</div>

<div class="px-8 py-6 bg-white border-b border-slate-100 shadow-sm flex flex-col sm:flex-row sm:items-center justify-between gap-4">
    <div class="animate__animated animate__fadeInLeft">
        <h2 class="text-2xl font-extrabold text-slate-800 tracking-tight flex items-center gap-3">
            <span class="w-10 h-10 rounded-xl bg-gradient-to-tr from-blue-600 to-indigo-600 flex items-center justify-center text-white shadow-lg shadow-blue-200">
                <i class="fa-solid fa-id-card-clip"></i>
            </span>
            Hồ Sơ Nhân Sự
        </h2>
        <p class="text-sm text-slate-500 mt-1 ml-14">Quản lý thông tin nhân viên và hợp đồng lao động.</p>
    </div>

    <a asp-action="Create"
       class="animate__animated animate__fadeInRight group inline-flex items-center justify-center gap-2 bg-slate-900 hover:bg-blue-600 text-white px-5 py-2.5 rounded-xl text-sm font-bold transition-all duration-300 shadow-md hover:shadow-xl hover:-translate-y-0.5">
        <i class="fa-solid fa-user-plus transition-transform group-hover:rotate-12"></i>
        <span>Thêm nhân viên</span>
    </a>
</div>

<div class="px-8 py-5 bg-slate-50 border-b border-slate-200 sticky top-0 z-20 backdrop-blur-sm bg-slate-50/90">
    <div class="flex flex-col xl:flex-row gap-4 justify-between items-end xl:items-center">

        <form method="get" class="flex flex-wrap gap-3 items-center w-full xl:w-auto">
            <div class="relative group w-full sm:w-60">
                <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-blue-500 transition-colors"></i>
                <input name="keyword" value="@keyword" placeholder="Tên, Mã NV, Email..."
                       class="w-full pl-10 pr-3 py-2.5 bg-white border border-slate-300 rounded-xl text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none shadow-sm transition-all" />
            </div>

            <div class="w-full sm:w-48">
                <select name="deptId" asp-items="ViewBag.Departments" class="w-full px-3 py-2.5 bg-white border border-slate-300 rounded-xl text-sm focus:ring-2 focus:ring-blue-500 outline-none shadow-sm cursor-pointer">
                    <option value="">-- Tất cả phòng ban --</option>
                </select>
            </div>

            <div class="w-full sm:w-48">
                <select name="posId" asp-items="ViewBag.Positions" class="w-full px-3 py-2.5 bg-white border border-slate-300 rounded-xl text-sm focus:ring-2 focus:ring-blue-500 outline-none shadow-sm cursor-pointer">
                    <option value="">-- Tất cả chức vụ --</option>
                </select>
            </div>

            <div class="w-full sm:w-36">
                <select name="status" class="w-full px-3 py-2.5 bg-white border border-slate-300 rounded-xl text-sm focus:ring-2 focus:ring-blue-500 outline-none shadow-sm cursor-pointer">
                    <option value="">-- Trạng thái --</option>
                    <option value="1" selected="@(status == 1)">Active</option>
                    <option value="0" selected="@(status == 0)">Inactive</option>
                </select>
            </div>

            <button class="bg-blue-50 hover:bg-blue-100 text-blue-700 border border-blue-200 px-4 py-2.5 rounded-xl text-sm font-semibold transition-colors">
                <i class="fa-solid fa-filter mr-1"></i> Lọc
            </button>
            <a asp-action="Index" class="bg-white hover:bg-slate-100 text-slate-600 border border-slate-300 px-3 py-2.5 rounded-xl text-sm transition-colors" title="Làm mới">
                <i class="fa-solid fa-rotate-right"></i>
            </a>
        </form>

        <div class="flex bg-white p-1 rounded-xl border border-slate-200 shadow-sm">
            <button id="btnGridView" onclick="switchView('grid')" class="px-4 py-1.5 rounded-lg text-sm font-medium transition-all text-slate-500 hover:text-blue-600">
                <i class="fa-solid fa-border-all mr-1"></i> Grid
            </button>
            <button id="btnListView" onclick="switchView('list')" class="px-4 py-1.5 rounded-lg text-sm font-medium transition-all text-slate-500 hover:text-blue-600">
                <i class="fa-solid fa-list mr-1"></i> List
            </button>
        </div>
    </div>
</div>

<div class="p-8 bg-slate-100 min-h-screen">
    @if (Model == null || !Model.Any())
    {
        <div class="flex flex-col items-center justify-center py-20 bg-white rounded-3xl border border-dashed border-slate-300 animate__animated animate__fadeInUp">
            <div class="w-24 h-24 bg-slate-50 rounded-full flex items-center justify-center mb-4">
                <i class="fa-solid fa-user-group text-4xl text-slate-300"></i>
            </div>
            <h3 class="text-lg font-semibold text-slate-600">Không tìm thấy dữ liệu</h3>
            <p class="text-slate-400 text-sm mt-1">Thử thay đổi bộ lọc hoặc thêm hồ sơ nhân sự mới.</p>
        </div>
    }
    else
    {
        <div id="gridViewContainer" class="animate__animated animate__fadeIn">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-6">
                @foreach (var item in Model)
                {
                    bool isSelf = (item.Email == currentEmail); // Check chính mình
                    bool isActive = (item.Status == 1);

                    <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative group flex flex-col h-full">

                        <div class="absolute top-4 right-4 z-10">
                            @if (isActive)
                            {
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold bg-green-50 text-green-600 border border-green-100">
                                    <span class="w-1.5 h-1.5 rounded-full bg-green-500 mr-1.5 animate-pulse"></span> Active
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold bg-slate-100 text-slate-500 border border-slate-200">
                                    Inactive
                                </span>
                            }
                        </div>

                        <div class="flex flex-col items-center mb-4">
                            <a href="#" class="relative block mb-3 group-hover:scale-105 transition-transform duration-300">
                                @if (!string.IsNullOrEmpty(item.ImgAvatar))
                                {
                                    <img src="@item.ImgAvatar" class="w-24 h-24 rounded-full object-cover border-4 border-slate-50 shadow-md" />
                                }
                                else
                                {
                                    <div class="w-24 h-24 rounded-full bg-gradient-to-br from-indigo-400 to-blue-500 text-white flex items-center justify-center font-bold text-3xl shadow-md border-4 border-slate-50">
                                        @(item.FullName?.Substring(0, 1) ?? "U")
                                    </div>
                                }
                                @if (item.UserId != null)
                                {
                                    <div class="absolute bottom-0 right-0 w-6 h-6 bg-white rounded-full flex items-center justify-center shadow border border-slate-100 text-blue-500 text-xs" title="Đã có tài khoản">
                                        <i class="fa-solid fa-user-check"></i>
                                    </div>
                                }
                            </a>

                            <h3 class="text-lg font-bold text-slate-800 text-center line-clamp-1" title="@item.FullName">@item.FullName</h3>
                            <p class="text-xs text-blue-600 font-bold uppercase tracking-wide mt-1">@item.Position?.PositionName</p>
                            <span class="mt-2 px-2 py-1 bg-slate-50 border border-slate-100 rounded text-[10px] text-slate-500 font-mono font-bold">
                                @item.EmployeeCode
                            </span>
                        </div>

                        <div class="space-y-2 mb-6 text-sm text-slate-500 flex-grow">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-slate-400 flex-shrink-0">
                                    <i class="fa-regular fa-building"></i>
                                </div>
                                <span class="truncate">@item.Department?.DepartmentName</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-slate-400 flex-shrink-0">
                                    <i class="fa-regular fa-envelope"></i>
                                </div>
                                <span class="truncate" title="@item.Email">@item.Email</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-slate-400 flex-shrink-0">
                                    <i class="fa-solid fa-phone"></i>
                                </div>
                                <span>@item.Phone</span>
                            </div>
                        </div>

                        <div class="grid grid-cols-4 gap-2 pt-4 border-t border-slate-100">
                            <a href="#" class="col-span-2 py-2 flex items-center justify-center gap-2 rounded-lg bg-indigo-50 text-indigo-600 text-xs font-bold hover:bg-indigo-600 hover:text-white transition-colors" title="Chi tiết & Hợp đồng">
                                <i class="fa-solid fa-file-contract"></i> Hồ sơ
                            </a>

                            @if (isActive)
                            {
                                <a asp-action="Edit" asp-route-id="@item.EmployeeId"
                                   class="py-2 flex items-center justify-center rounded-lg border border-slate-200 text-slate-600 hover:border-blue-500 hover:text-blue-500 transition-colors" title="Sửa thông tin">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            }
                            else
                            {
                                <button disabled class="py-2 flex items-center justify-center rounded-lg border border-slate-100 text-slate-300 cursor-not-allowed" title="Nhân viên đã nghỉ việc">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            }

                            @if (isActive)
                            {
                                @if (isSelf)
                                {
                                    <button disabled class="py-2 flex items-center justify-center rounded-lg border border-slate-100 text-slate-300 cursor-not-allowed" title="Không thể xóa chính mình">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                }
                                else
                                {
                                    <button onclick="confirmAction(@item.EmployeeId, 'Inactive')" class="py-2 flex items-center justify-center rounded-lg border border-slate-200 text-red-500 hover:bg-red-500 hover:text-white transition-colors" title="Thôi việc">
                                        <i class="fa-solid fa-user-xmark"></i>
                                    </button>
                                    <form id="action-form-inactive-@item.EmployeeId" asp-action="Inactive" asp-route-id="@item.EmployeeId" method="post" class="hidden"></form>
                                }
                            }
                            else
                            {
                                <button onclick="confirmAction(@item.EmployeeId, 'Active')" class="py-2 flex items-center justify-center rounded-lg border border-slate-200 text-green-600 hover:bg-green-600 hover:text-white transition-colors" title="Kích hoạt lại">
                                    <i class="fa-solid fa-rotate-left"></i>
                                </button>
                                <form id="action-form-active-@item.EmployeeId" asp-action="Active" asp-route-id="@item.EmployeeId" method="post" class="hidden"></form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <div id="listViewContainer" class="animate__animated animate__fadeIn hidden">
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-slate-50/50 text-slate-600 font-bold uppercase text-xs tracking-wider border-b border-slate-200">
                            <tr>
                                <th class="px-6 py-4 w-12 text-center">STT</th>
                                <th class="px-6 py-4">Nhân viên</th>
                                <th class="px-6 py-4">Mã NV</th>
                                <th class="px-6 py-4">Chức vụ / Phòng ban</th>
                                <th class="px-6 py-4">Ngày vào làm</th>
                                <th class="px-6 py-4 text-center">Trạng thái</th>
                                <th class="px-6 py-4 text-right">Hành động</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            @foreach (var item in Model)
                            {
                                bool isSelf = (item.Email == currentEmail);
                                bool isActive = (item.Status == 1);

                                <tr class="hover:bg-blue-50/30 transition-colors group">
                                    <td class="px-6 py-4 text-center text-slate-400 font-medium">@(++stt)</td>

                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            @if (!string.IsNullOrEmpty(item.ImgAvatar))
                                            {
                                                <img src="@item.ImgAvatar" class="w-9 h-9 rounded-full object-cover border border-slate-200" />
                                            }
                                            else
                                            {
                                                <div class="w-9 h-9 rounded-full bg-gradient-to-br from-indigo-400 to-blue-500 text-white flex items-center justify-center font-bold text-xs">
                                                    @(item.FullName?.Substring(0, 1) ?? "U")
                                                </div>
                                            }
                                            <div>
                                                <div class="font-bold text-slate-700 text-sm">@item.FullName</div>
                                                <div class="text-xs text-slate-400">@item.Email</div>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="px-6 py-4">
                                        <span class="font-mono text-xs font-bold bg-slate-100 px-2 py-1 rounded text-slate-600">
                                            @item.EmployeeCode
                                        </span>
                                    </td>

                                    <td class="px-6 py-4">
                                        <div class="text-blue-600 font-bold text-xs uppercase">@item.Position?.PositionName</div>
                                        <div class="text-slate-500 text-xs">@item.Department?.DepartmentName</div>
                                    </td>

                                    <td class="px-6 py-4 text-slate-500 text-xs">
                                        @item.HireDate.ToString("dd/MM/yyyy")
                                    </td>

                                    <td class="px-6 py-4 text-center">
                                        @if (isActive)
                                        {
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-green-100 text-green-700 border border-green-200">
                                                Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-slate-100 text-slate-500 border border-slate-200">
                                                Inactive
                                            </span>
                                        }
                                    </td>

                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end gap-2 opacity-80 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity">

                                            <a href="#" class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-indigo-600 hover:bg-indigo-600 hover:text-white transition-all shadow-sm" title="Hồ sơ hợp đồng">
                                                <i class="fa-solid fa-file-contract text-xs"></i>
                                            </a>

                                            @if (isActive)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.EmployeeId"
                                                   class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-blue-600 hover:bg-blue-600 hover:text-white transition-all shadow-sm" title="Sửa">
                                                    <i class="fa-solid fa-pen text-xs"></i>
                                                </a>
                                            }

                                            @if (isActive)
                                            {
                                                @if (isSelf)
                                                {
                                                    <button disabled class="w-8 h-8 flex items-center justify-center rounded-lg bg-slate-50 border border-slate-200 text-slate-300 cursor-not-allowed">
                                                        <i class="fa-solid fa-trash text-xs"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button onclick="confirmAction(@item.EmployeeId, 'Inactive')" class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-red-500 hover:bg-red-500 hover:text-white transition-all shadow-sm" title="Thôi việc">
                                                        <i class="fa-solid fa-user-xmark text-xs"></i>
                                                    </button>
                                                    <form id="action-form-inactive-@item.EmployeeId" asp-action="Inactive" asp-route-id="@item.EmployeeId" method="post" class="hidden"></form>
                                                }
                                            }
                                            else
                                            {
                                                <button onclick="confirmAction(@item.EmployeeId, 'Active')" class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-green-600 hover:bg-green-600 hover:text-white transition-all shadow-sm" title="Kích hoạt lại">
                                                    <i class="fa-solid fa-rotate-left text-xs"></i>
                                                </button>
                                                <form id="action-form-active-@item.EmployeeId" asp-action="Active" asp-route-id="@item.EmployeeId" method="post" class="hidden"></form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (totalPages > 1)
        {
            <div class="mt-8 flex justify-center pb-8">
                <nav class="inline-flex rounded-xl shadow-sm bg-white p-1.5 gap-1 border border-slate-200">
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <a href="?page=@i&keyword=@ViewBag.Keyword&status=@ViewBag.Status&deptId=@ViewBag.DeptId&posId=@ViewBag.PosId"
                           class="w-9 h-9 flex items-center justify-center rounded-lg text-sm font-bold transition-all @(i == currentPage ? "bg-blue-600 text-white shadow-md scale-105" : "text-slate-600 hover:bg-slate-100")">
                            @i
                        </a>
                    }
                </nav>
            </div>
        }
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Auto hide alerts
        const alerts = document.querySelectorAll(".alert-toast");
        if (alerts.length > 0) {
            setTimeout(() => {
                alerts.forEach(el => {
                    el.classList.remove("animate__fadeInRight");
                    el.classList.add("animate__fadeOutRight");
                    el.addEventListener('animationend', () => el.remove());
                });
            }, 3000);
        }

        // Restore view mode (Default Grid)
        const savedMode = localStorage.getItem('empViewMode') || 'grid';
        switchView(savedMode);
    });

    // Toggle List/Grid
    function switchView(mode) {
        const listContainer = document.getElementById('listViewContainer');
        const gridContainer = document.getElementById('gridViewContainer');
        const btnList = document.getElementById('btnListView');
        const btnGrid = document.getElementById('btnGridView');

        if (mode === 'grid') {
            listContainer.classList.add('hidden');
            gridContainer.classList.remove('hidden');
            // Style Active
            btnGrid.classList.add('bg-blue-100', 'text-blue-700');
            btnList.classList.remove('bg-blue-100', 'text-blue-700');
        } else {
            gridContainer.classList.add('hidden');
            listContainer.classList.remove('hidden');
            // Style Active
            btnList.classList.add('bg-blue-100', 'text-blue-700');
            btnGrid.classList.remove('bg-blue-100', 'text-blue-700');
        }
        localStorage.setItem('empViewMode', mode);
    }

    // Confirm Action (SweetAlert2)
    function confirmAction(id, actionType) {
        let title, text, btnColor, btnText, icon;

        if (actionType === 'Inactive') {
            title = 'Xác nhận thôi việc?';
            text = "Hồ sơ nhân viên này sẽ bị vô hiệu hóa và tài khoản đăng nhập (nếu có) sẽ bị khóa.";
            btnColor = '#ef4444'; // Red
            btnText = 'Xác nhận thôi việc';
            icon = 'warning';
        } else {
            title = 'Kích hoạt lại?';
            text = "Khôi phục hồ sơ nhân viên và mở khóa tài khoản.";
            btnColor = '#10b981'; // Green
            btnText = 'Kích hoạt';
            icon = 'question';
        }

        Swal.fire({
            title: title,
            text: text,
            icon: icon,
            showCancelButton: true,
            confirmButtonColor: btnColor,
            cancelButtonColor: '#64748b',
            confirmButtonText: btnText,
            cancelButtonText: 'Hủy',
            background: '#fff',
            customClass: {
                popup: 'rounded-2xl shadow-xl',
                confirmButton: 'rounded-lg px-4 py-2 font-bold',
                cancelButton: 'rounded-lg px-4 py-2 font-medium'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const formId = actionType === 'Inactive' ? 'action-form-inactive-' + id : 'action-form-active-' + id;
                document.getElementById(formId).submit();
            }
        });
    }
</script>