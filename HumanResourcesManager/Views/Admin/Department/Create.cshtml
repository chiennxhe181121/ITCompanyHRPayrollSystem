@model HumanResourcesManager.BLL.DTOs.Department.DepartmentCreateUpdateDTO

@{
    ViewData["Title"] = "Thêm Phòng Ban";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen bg-slate-50 flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">

    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none">
        <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-indigo-100/50 mix-blend-multiply filter blur-3xl animate-blob"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-blue-100/50 mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
    </div>

    <div class="relative z-10 sm:mx-auto sm:w-full sm:max-w-xl animate__animated animate__fadeInUp">

        <a href="/HumanResourcesManager/admin/departments" class="inline-flex items-center text-sm text-slate-500 hover:text-indigo-600 mb-6 transition-colors group">
            <i class="fa-solid fa-arrow-left-long mr-2 transition-transform group-hover:-translate-x-1"></i>
            Quay lại danh sách
        </a>

        <div class="bg-white shadow-2xl shadow-slate-200/60 rounded-3xl overflow-hidden border border-slate-100">
            <div class="bg-gradient-to-r from-indigo-600 to-violet-700 px-8 py-10 text-white relative">
                <div class="relative z-10">
                    <h2 class="text-3xl font-extrabold tracking-tight">Tạo Phòng Ban Mới</h2>
                    <p class="mt-2 text-indigo-100 text-sm opacity-90">Thiết lập bộ phận mới trong cơ cấu tổ chức của doanh nghiệp.</p>
                </div>
                <i class="fa-solid fa-building-circle-plus absolute right-8 top-1/2 -translate-y-1/2 text-7xl opacity-10 rotate-12"></i>
            </div>

            <form method="post" class="p-8 space-y-6">
                @Html.AntiForgeryToken()

                <div class="space-y-1">
                    <label asp-for="DepartmentName" class="block text-sm font-bold text-slate-700 ml-1">
                        Tên phòng ban <span class="text-red-500">*</span>
                    </label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fa-solid fa-sitemap text-slate-400 group-focus-within:text-indigo-500 transition-colors"></i>
                        </div>
                        <input asp-for="DepartmentName"
                               class="block w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl text-sm focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all duration-200"
                               placeholder="Ví dụ: Trung tâm Phát triển Phần mềm" />
                    </div>
                    <span asp-validation-for="DepartmentName" class="text-xs text-red-500 font-medium ml-1"></span>
                </div>

                <div class="space-y-1">
                    <label asp-for="Description" class="block text-sm font-bold text-slate-700 ml-1">
                        Mô tả chức năng
                    </label>
                    <div class="relative group">
                        <div class="absolute top-3 left-4 flex items-start pointer-events-none">
                            <i class="fa-solid fa-quote-left text-slate-400 group-focus-within:text-indigo-500 transition-colors"></i>
                        </div>
                        <textarea asp-for="Description"
                                  rows="4"
                                  class="block w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl text-sm focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all duration-200"
                                  placeholder="Nêu ngắn gọn nhiệm vụ chính của phòng ban này..."></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-xs text-red-500 font-medium ml-1"></span>
                </div>

                <div class="bg-amber-50 rounded-2xl p-4 flex gap-3 border border-amber-100/50">
                    <i class="fa-solid fa-circle-info text-amber-500 mt-0.5"></i>
                    <p class="text-xs text-amber-800 leading-relaxed italic">
                        Sau khi tạo, phòng ban sẽ ở trạng thái <b>Active</b> mặc định. Bạn có thể thay đổi trạng thái hoặc chỉnh sửa thông tin bất cứ lúc nào.
                    </p>
                </div>

                <div class="flex items-center gap-3 pt-6 border-t border-slate-100">
                    <a href="/HumanResourcesManager/admin/departments"
                       class="flex-1 py-3 px-4 text-center rounded-2xl border border-slate-200 text-slate-600 text-sm font-bold hover:bg-slate-50 transition-all duration-200">
                        Huỷ bỏ
                    </a>

                    <button type="submit"
                            class="flex-[2] inline-flex items-center justify-center gap-2 py-3 px-4 bg-gradient-to-r from-indigo-600 to-violet-600 hover:from-indigo-700 hover:to-violet-700 text-white rounded-2xl text-sm font-bold shadow-lg shadow-indigo-200 hover:shadow-indigo-300 transition-all duration-300 transform hover:-translate-y-0.5 active:scale-95">
                        <i class="fa-solid fa-check-circle"></i>
                        <span>Xác nhận thêm mới</span>
                    </button>
                </div>
            </form>
        </div>

        <p class="text-center text-xs text-slate-400 mt-8">
            &copy; 2026 Human Resources Management System • Developed by Gemini
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        @@keyframes blob {
            0% { transform: translate(0px, 0px) scale(1); }
            33% { transform: translate(30px, -50px) scale(1.1); }
            66% { transform: translate(-20px, 20px) scale(0.9); }
            100% { transform: translate(0px, 0px) scale(1); }
        }
        .animate-blob {
            animation: blob 7s infinite;
        }
        .animation-delay-2000 {
            animation-delay: 2s;
        }
    </style>
}