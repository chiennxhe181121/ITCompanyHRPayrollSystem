        //     const number = parseInt(value, 10);
        //     if (!isNaN(number)) {
        //         let text = DOCSO.doc(number);
        //         Viết hoa chữ cái đầu
        //         text = text.charAt(0).toUpperCase() + text.slice(1);
        //         document.getElementById('salaryText').innerText = 'Bằng chữ: ' + text + ' đồng';
        //     }
        // }

        // Hàm xử lý chính
        function formatCurrency(input) {
            // 1. Chỉ giữ lại số
            let value = input.value.replace(/[^0-9]/g, '');

            //  VALIDATION JS: Chặn nếu quá 15 chữ số (999 Nghìn Tỷ)
            // Để tránh mảng DOCSO.tien bị hết index (gây lỗi undefined)
            if (value.length > 15) {
                value = value.substring(0, 15);
            }

            // Gán giá trị thực vào hidden input
            document.getElementById('salaryHidden').value = value;

            if (!value) {
                input.value = '';
                document.getElementById('salaryText').innerText = '';
                return;
            }

            // 2. Format dấu phẩy hiển thị lại (VD: 1,000,000)
            input.value = new Intl.NumberFormat('en-US').format(value);

            // 3. Đọc số thành chữ
            const number = parseInt(value, 10);
            if (!isNaN(number)) {
                // Kiểm tra an toàn trước khi đọc
                if (value.length > 15) {
                     document.getElementById('salaryText').innerText = 'Số tiền quá lớn để đọc!';
                } else {
                    let text = DOCSO.doc(number);
                    if(text) {
                        text = text.charAt(0).toUpperCase() + text.slice(1);
                        document.getElementById('salaryText').innerText = 'Bằng chữ: ' + text + ' đồng';
                    } else {
                         document.getElementById('salaryText').innerText = '';
                    }
                }
            }
        }
    </script>
