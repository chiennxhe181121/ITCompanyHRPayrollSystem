@model HumanResourcesManager.BLL.DTOs.Position.PositionCreateUpdateDTO

@{
    ViewData["Title"] = "Thêm Chức Vụ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen bg-slate-50 flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none">
        <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-emerald-100/50 mix-blend-multiply filter blur-3xl animate-blob"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-teal-100/50 mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
    </div>

    <div class="relative z-10 sm:mx-auto sm:w-full sm:max-w-xl animate__animated animate__fadeInUp">

        <a href="/HumanResourcesManager/admin/positions" class="inline-flex items-center text-sm text-slate-500 hover:text-emerald-600 mb-6 transition-colors group">
            <i class="fa-solid fa-arrow-left-long mr-2 transition-transform group-hover:-translate-x-1"></i>
            Quay lại danh sách
        </a>

        <div class="bg-white shadow-2xl rounded-3xl overflow-hidden border border-slate-100">
            <div class="bg-gradient-to-r from-emerald-600 to-teal-700 px-8 py-10 text-white relative">
                <div class="relative z-10">
                    <h2 class="text-3xl font-extrabold tracking-tight">Thêm Chức Vụ</h2>
                    <p class="mt-2 text-emerald-100 text-sm opacity-90">Thiết lập vị trí công việc và mức lương nền tảng.</p>
                </div>
                <i class="fa-solid fa-briefcase absolute right-8 top-1/2 -translate-y-1/2 text-7xl opacity-10 rotate-12"></i>
            </div>

            <form method="post" class="p-8 space-y-6">
                @Html.AntiForgeryToken()

                <div class="space-y-1">
                    <label asp-for="PositionName" class="block text-sm font-bold text-slate-700 ml-1">
                        Tên chức vụ <span class="text-red-500">*</span>
                    </label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fa-solid fa-signature text-slate-400 group-focus-within:text-emerald-500 transition-colors"></i>
                        </div>
                        <input asp-for="PositionName"
                               class="block w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl text-sm focus:bg-white focus:ring-2 focus:ring-emerald-500 outline-none transition-all duration-200"
                               placeholder="Ví dụ: Senior Frontend Developer" />
                    </div>
                    <span asp-validation-for="PositionName" class="text-xs text-red-500 font-medium ml-1"></span>
                </div>

                <div class="space-y-1">
                    <label asp-for="BaseSalary" class="block text-sm font-bold text-slate-700 ml-1">
                        Lương cơ bản (VNĐ) <span class="text-red-500">*</span>
                    </label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fa-solid fa-money-bill-wave text-slate-400 group-focus-within:text-emerald-500 transition-colors"></i>
                        </div>

                        @* <input type="text"
                               id="salaryDisplay"
                               class="block w-full pl-11 pr-16 py-3 bg-slate-50 border border-slate-200 rounded-2xl text-sm focus:bg-white focus:ring-2 focus:ring-emerald-500 outline-none transition-all duration-200 font-mono font-bold text-emerald-700"
                               placeholder="0"
                               autocomplete="off"
                               oninput="formatCurrency(this)" /> *@

                        <input type="text"
                               id="salaryDisplay"
                               value="@(Model?.BaseSalary > 0 ? Model?.BaseSalary.ToString("N0") : "")"
                               class="block w-full pl-11 pr-16 py-3 bg-slate-50 border border-slate-200 rounded-2xl text-sm focus:bg-white focus:ring-2 focus:ring-emerald-500 outline-none transition-all duration-200 font-mono font-bold text-emerald-700"
                               placeholder="0"
                               autocomplete="off"
                               maxlength="20"
                               oninput="formatCurrency(this)" />

                        <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                            <span class="text-slate-400 font-bold text-xs">VNĐ</span>
                        </div>

                        <input asp-for="BaseSalary" type="hidden" id="salaryHidden" />
                    </div>

                    <p id="salaryText" class="text-xs text-emerald-600 font-medium ml-1 italic mt-1 min-h-[1.25rem]"></p>

                    <span asp-validation-for="BaseSalary" class="text-xs text-red-500 font-medium ml-1"></span>
                </div>

                <div class="space-y-1">
                    <label asp-for="Description" class="block text-sm font-bold text-slate-700 ml-1">Mô tả công việc</label>
                    <div class="relative group">
                        <div class="absolute top-3 left-4 flex items-start pointer-events-none">
                            <i class="fa-solid fa-align-left text-slate-400 group-focus-within:text-emerald-500 transition-colors"></i>
                        </div>
                        <textarea asp-for="Description"
                                  rows="3"
                                  class="block w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl text-sm focus:bg-white focus:ring-2 focus:ring-emerald-500 outline-none transition-all duration-200"
                                  placeholder="Mô tả ngắn gọn trách nhiệm..."></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-xs text-red-500 font-medium ml-1"></span>
                </div>

                <div class="flex items-center gap-3 pt-6 border-t border-slate-100">
                    <a href="/HumanResourcesManager/admin/positions"
                       class="flex-1 py-3 px-4 text-center rounded-2xl border border-slate-200 text-slate-600 text-sm font-bold hover:bg-slate-50 transition-all duration-200">
                        Huỷ bỏ
                    </a>
                    <button type="submit"
                            class="flex-[2] inline-flex items-center justify-center gap-2 py-3 px-4 bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-700 hover:to-teal-700 text-white rounded-2xl text-sm font-bold shadow-lg shadow-emerald-200 hover:shadow-emerald-300 transition-all duration-300 transform hover:-translate-y-0.5 active:scale-95">
                        <i class="fa-solid fa-circle-plus"></i>
                        <span>Xác nhận tạo</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
