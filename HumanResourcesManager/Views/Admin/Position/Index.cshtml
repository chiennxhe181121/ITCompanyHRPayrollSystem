@model IEnumerable<HumanResourcesManager.BLL.DTOs.Position.PositionListDTO>

@{
    ViewData["Title"] = "Quản Lý Chức Vụ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string keyword = ViewBag.Keyword as string;
    int? status = ViewBag.Status as int?;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = 10;

    int stt = (currentPage - 1) * pageSize;
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div id="notification-area" class="fixed top-5 right-5 z-50 space-y-2 pointer-events-none">
    @if (TempData["Error"] != null)
    {
        <div class="alert-toast pointer-events-auto flex items-center w-full max-w-xs p-4 text-gray-500 bg-white rounded-xl shadow-lg border-l-4 border-red-500 animate__animated animate__fadeInRight">
            <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg">
                <i class="fa-solid fa-circle-exclamation"></i>
            </div>
            <div class="ml-3 text-sm font-medium text-red-600">@TempData["Error"]</div>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert-toast pointer-events-auto flex items-center w-full max-w-xs p-4 text-gray-500 bg-white rounded-xl shadow-lg border-l-4 border-emerald-500 animate__animated animate__fadeInRight">
            <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-emerald-500 bg-emerald-100 rounded-lg">
                <i class="fa-solid fa-circle-check"></i>
            </div>
            <div class="ml-3 text-sm font-medium text-emerald-600">@TempData["Success"]</div>
        </div>
    }
</div>

<div class="px-8 py-6 bg-white border-b border-slate-100 shadow-sm flex flex-col sm:flex-row sm:items-center justify-between gap-4">
    <div class="animate__animated animate__fadeInLeft">
        <h2 class="text-2xl font-extrabold text-slate-800 tracking-tight flex items-center gap-3">
            <span class="w-10 h-10 rounded-xl bg-gradient-to-tr from-emerald-500 to-teal-600 flex items-center justify-center text-white shadow-lg shadow-emerald-200">
                <i class="fa-solid fa-briefcase"></i>
            </span>
            Quản Lý Chức Vụ
        </h2>
        <p class="text-sm text-slate-500 mt-1 ml-14">Thiết lập vị trí và mức lương cơ bản.</p>
    </div>

    <a asp-action="Create"
       class="animate__animated animate__fadeInRight group inline-flex items-center justify-center gap-2 bg-slate-900 hover:bg-emerald-600 text-white px-5 py-2.5 rounded-xl text-sm font-bold transition-all duration-300 shadow-md hover:shadow-xl hover:-translate-y-0.5">
        <i class="fa-solid fa-plus transition-transform group-hover:rotate-90"></i>
        <span>Thêm chức vụ</span>
    </a>
</div>

<div class="px-8 py-5 bg-slate-50 border-b border-slate-200 sticky top-0 z-20 backdrop-blur-sm bg-slate-50/90">
    <div class="flex flex-col lg:flex-row gap-4 justify-between items-end lg:items-center">
        <form method="get" class="flex flex-wrap gap-3 items-center w-full lg:w-auto">
            <div class="relative group w-full sm:w-64">
                <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-emerald-500 transition-colors"></i>
                <input name="keyword" value="@keyword" placeholder="Tìm kiếm chức vụ..."
                       class="w-full pl-10 pr-3 py-2.5 bg-white border border-slate-300 rounded-xl text-sm focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 outline-none shadow-sm transition-all" />
            </div>

            <div class="w-full sm:w-40">
                <select name="status" class="w-full px-3 py-2.5 bg-white border border-slate-300 rounded-xl text-sm focus:ring-2 focus:ring-emerald-500 outline-none shadow-sm cursor-pointer">
                    <option value="">-- Trạng thái --</option>
                    <option value="1" selected="@(status == 1)">Active</option>
                    <option value="0" selected="@(status == 0)">Inactive</option>
                </select>
            </div>

            <button class="bg-emerald-50 hover:bg-emerald-100 text-emerald-700 border border-emerald-200 px-4 py-2.5 rounded-xl text-sm font-semibold transition-colors">
                Lọc
            </button>
            <a asp-action="Index" class="bg-white hover:bg-slate-100 text-slate-600 border border-slate-300 px-3 py-2.5 rounded-xl text-sm transition-colors" title="Làm mới">
                <i class="fa-solid fa-rotate-right"></i>
            </a>
        </form>

        <div class="flex bg-white p-1 rounded-xl border border-slate-200 shadow-sm">
            <button id="btnListView" onclick="switchView('list')" class="px-4 py-1.5 rounded-lg text-sm font-medium transition-all text-slate-500 hover:text-emerald-600">
                <i class="fa-solid fa-list mr-1"></i> List
            </button>
            <button id="btnGridView" onclick="switchView('grid')" class="px-4 py-1.5 rounded-lg text-sm font-medium transition-all text-slate-500 hover:text-emerald-600">
                <i class="fa-solid fa-border-all mr-1"></i> Grid
            </button>
        </div>
    </div>
</div>

<div class="p-8 bg-slate-100 min-h-screen">
    @if (!Model.Any())
    {
        <div class="flex flex-col items-center justify-center py-20 bg-white rounded-3xl border border-dashed border-slate-300 animate__animated animate__fadeInUp">
            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mb-4">
                <i class="fa-solid fa-briefcase text-4xl text-slate-300"></i>
            </div>
            <h3 class="text-lg font-semibold text-slate-600">Không tìm thấy dữ liệu</h3>
            <p class="text-slate-400 text-sm">Thử thay đổi bộ lọc hoặc thêm chức vụ mới.</p>
        </div>
    }
    else
    {
        <div id="listViewContainer" class="animate__animated animate__fadeIn">
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left">
                        <thead class="bg-slate-50/50 text-slate-600 font-bold uppercase text-xs tracking-wider border-b border-slate-200">
                            <tr>
                                <th class="px-6 py-4 text-center w-16">STT</th>
                                <th class="px-6 py-4">Tên chức vụ</th>
                                <th class="px-6 py-4">Mức lương cơ bản</th>
                                <th class="px-6 py-4 w-1/4">Mô tả</th>
                                <th class="px-6 py-4 text-center">Nhân sự</th>
                                <th class="px-6 py-4 text-center">Trạng thái</th>
                                <th class="px-6 py-4 text-right">Hành động</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            @foreach (var item in Model)
                            {
                                <tr class="hover:bg-emerald-50/30 transition-colors group">
                                    <td class="px-6 py-4 text-center text-slate-400 font-medium">@(++stt)</td>

                                    <td class="px-6 py-4">
                                        <span class="font-bold text-slate-700 text-sm group-hover:text-emerald-700 transition-colors">
                                            @item.PositionName
                                        </span>
                                    </td>

                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <span class="text-emerald-700 font-mono font-bold bg-emerald-50 px-2.5 py-1 rounded border border-emerald-100 shadow-sm">
                                                <i class="fa-solid fa-coins text-emerald-500 mr-1 text-xs"></i>
                                                @item.BaseSalary.ToString("N0") <span class="text-xs font-sans text-emerald-600">VNĐ</span>
                                            </span>
                                        </div>
                                    </td>

                                    <td class="px-6 py-4 text-slate-500">
                                        <span class="line-clamp-1 text-xs" title="@item.Description">
                                            @(string.IsNullOrEmpty(item.Description) ? "—" : item.Description)
                                        </span>
                                    </td>

                                    <td class="px-6 py-4 text-center">
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full border border-blue-200 bg-blue-50 text-blue-700 text-xs font-bold">
                                            <i class="fa-solid fa-users"></i> @item.EmployeeCount
                                        </span>
                                    </td>

                                    <td class="px-6 py-4 text-center">
                                        @if (item.Status == 1)
                                        {
                                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full border border-green-200 bg-green-50 text-green-700 text-xs font-bold">
                                                <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full border border-slate-200 bg-slate-100 text-slate-600 text-xs font-bold">
                                                Inactive
                                            </span>
                                        }
                                    </td>

                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end gap-2 opacity-80 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity">
                                            <a asp-action="Edit"
                                               asp-route-id="@item.PositionId"
                                               asp-route-page="@currentPage"
                                               asp-route-keyword="@keyword"
                                               asp-route-status="@status"
                                               class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-blue-600 hover:bg-blue-600 hover:text-white transition-all shadow-sm" title="Sửa">
                                                <i class="fa-solid fa-pen text-xs"></i>
                                            </a>

                                            @if (item.Status == 1)
                                            {
                                                <button onclick="confirmAction(@item.PositionId, 'Inactive')" class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-red-500 hover:bg-red-500 hover:text-white transition-all shadow-sm" title="Xóa">
                                                    <i class="fa-solid fa-trash text-xs"></i>
                                                </button>
                                                <form id="action-form-inactive-@item.PositionId" asp-action="Inactive" asp-route-id="@item.PositionId" asp-route-page="@currentPage" asp-route-keyword="@keyword" asp-route-status="@status" method="post" class="hidden"></form>
                                            }
                                            else
                                            {
                                                <button onclick="confirmAction(@item.PositionId, 'Active')" class="w-8 h-8 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-green-600 hover:bg-green-600 hover:text-white transition-all shadow-sm" title="Kích hoạt">
                                                    <i class="fa-solid fa-rotate-left text-xs"></i>
                                                </button>
                                                <form id="action-form-active-@item.PositionId" asp-action="Active" asp-route-id="@item.PositionId" asp-route-page="@currentPage" asp-route-keyword="@keyword" asp-route-status="@status" method="post" class="hidden"></form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div id="gridViewContainer" class="hidden animate__animated animate__fadeIn">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @foreach (var item in Model)
                {
                    <div class="bg-white rounded-2xl border border-slate-200 p-5 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative group overflow-hidden">
                        <div class="absolute top-0 left-0 w-full h-1.5 @(item.Status == 1 ? "bg-emerald-500" : "bg-slate-300")"></div>

                        <div class="flex justify-between items-start mb-4">
                            <div class="w-12 h-12 rounded-xl @(item.Status == 1 ? "bg-emerald-50 text-emerald-600" : "bg-slate-100 text-slate-400") flex items-center justify-center text-xl shadow-inner border border-slate-100">
                                <i class="fa-solid fa-briefcase"></i>
                            </div>
                            @if (item.Status == 1)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-green-100 text-green-700 border border-green-100">Active</span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-slate-50 text-slate-500 border border-slate-200">Inactive</span>
                            }
                        </div>

                        <h3 class="text-lg font-bold text-slate-800 mb-1 truncate" title="@item.PositionName">@item.PositionName</h3>

                        <p class="text-sm font-mono font-bold text-emerald-700 mb-3 flex items-center gap-1">
                            <i class="fa-solid fa-coins text-emerald-500 text-xs"></i>
                            @item.BaseSalary.ToString("N0") <span class="text-xs font-sans text-emerald-600">VNĐ</span>
                        </p>

                        <p class="text-xs text-slate-500 mb-4 h-8 line-clamp-2">@(string.IsNullOrEmpty(item.Description) ? "Không có mô tả" : item.Description)</p>

                        <div class="flex items-center justify-between border-t border-slate-100 pt-4 mt-2">
                            <div class="text-xs font-semibold text-slate-500 flex items-center gap-1.5">
                                <i class="fa-solid fa-users text-blue-500"></i> @item.EmployeeCount nhân sự
                            </div>

                            <div class="flex gap-2">
                                <a asp-action="Edit" asp-route-id="@item.PositionId" asp-route-page="@currentPage" asp-route-keyword="@keyword" asp-route-status="@status" class="w-8 h-8 rounded-full bg-slate-50 text-blue-600 flex items-center justify-center hover:bg-blue-600 hover:text-white transition-colors">
                                    <i class="fa-solid fa-pen text-xs"></i>
                                </a>
                                @if (item.Status == 1)
                                {
                                    <button onclick="confirmAction(@item.PositionId, 'Inactive')" class="w-8 h-8 rounded-full bg-slate-50 text-red-500 flex items-center justify-center hover:bg-red-500 hover:text-white transition-colors">
                                        <i class="fa-solid fa-trash text-xs"></i>
                                    </button>
                                }
                                else
                                {
                                    <button onclick="confirmAction(@item.PositionId, 'Active')" class="w-8 h-8 rounded-full bg-slate-50 text-green-600 flex items-center justify-center hover:bg-green-600 hover:text-white transition-colors">
                                        <i class="fa-solid fa-rotate-left text-xs"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (totalPages > 1)
        {
            <div class="mt-8 flex justify-center pb-8">
                <nav class="inline-flex rounded-xl shadow-sm bg-white p-1.5 gap-1 border border-slate-200">
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <a href="?page=@i&keyword=@keyword&status=@status"
                           class="w-9 h-9 flex items-center justify-center rounded-lg text-sm font-bold transition-all @(i == currentPage ? "bg-emerald-600 text-white shadow-md scale-105" : "text-slate-600 hover:bg-slate-100")">
                            @i
                        </a>
                    }
                </nav>
            </div>
        }
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Auto hide alerts
        const alerts = document.querySelectorAll(".alert-toast");
        if (alerts.length > 0) {
            setTimeout(() => {
                alerts.forEach(el => {
                    el.classList.remove("animate__fadeInRight");
                    el.classList.add("animate__fadeOutRight");
                    el.addEventListener('animationend', () => el.remove());
                });
            }, 3000);
        }

        // Restore view mode
        const savedMode = localStorage.getItem('posViewMode') || 'list';
        switchView(savedMode);
    });

    function switchView(mode) {
        const listContainer = document.getElementById('listViewContainer');
        const gridContainer = document.getElementById('gridViewContainer');
        const btnList = document.getElementById('btnListView');
        const btnGrid = document.getElementById('btnGridView');

        if (mode === 'grid') {
            listContainer.classList.add('hidden');
            gridContainer.classList.remove('hidden');
            btnGrid.classList.add('bg-emerald-100', 'text-emerald-700');
            btnList.classList.remove('bg-emerald-100', 'text-emerald-700');
        } else {
            gridContainer.classList.add('hidden');
            listContainer.classList.remove('hidden');
            btnList.classList.add('bg-emerald-100', 'text-emerald-700');
            btnGrid.classList.remove('bg-emerald-100', 'text-emerald-700');
        }
        localStorage.setItem('posViewMode', mode);
    }

    function confirmAction(id, actionType) {
        let title, text, btnColor, btnText;
        if (actionType === 'Inactive') {
            title = 'Xóa chức vụ?';
            text = "Nhân viên đang giữ chức vụ này có thể bị ảnh hưởng!";
            btnColor = '#ef4444';
            btnText = 'Vâng, xóa nó!';
        } else {
            title = 'Kích hoạt lại?';
            text = "Khôi phục chức vụ này vào hệ thống.";
            btnColor = '#10b981';
            btnText = 'Kích hoạt';
        }

        Swal.fire({
            title: title,
            text: text,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: btnColor,
            cancelButtonColor: '#64748b',
            confirmButtonText: btnText,
            cancelButtonText: 'Hủy',
            background: '#fff',
            customClass: {
                popup: 'rounded-2xl shadow-xl',
                confirmButton: 'rounded-lg px-4 py-2 font-bold',
                cancelButton: 'rounded-lg px-4 py-2 font-medium'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const formId = actionType === 'Inactive' ? 'action-form-inactive-' + id : 'action-form-active-' + id;
                document.getElementById(formId).submit();
            }
        });
    }
</script>