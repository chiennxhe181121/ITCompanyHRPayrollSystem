@model HumanResourcesManager.BLL.DTOs.Allowance.AllowanceDTO

@{
    ViewData["Title"] = "Cập Nhật Phụ Cấp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Lấy lại params để nút Quay lại / Hủy bỏ hoạt động đúng
    int pageIndex = ViewBag.Page ?? 1;
    string keyword = ViewBag.Keyword;
    int? status = ViewBag.Status;
}

<div class="min-h-screen bg-slate-50 flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none">
        <div class="absolute top-10 right-10 w-72 h-72 rounded-full bg-amber-200/40 mix-blend-multiply filter blur-3xl animate-blob"></div>
        <div class="absolute bottom-10 left-10 w-72 h-72 rounded-full bg-orange-200/40 mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
    </div>

    <div class="relative z-10 sm:mx-auto sm:w-full sm:max-w-lg animate__animated animate__fadeInUp">

        <a href="/HumanResourcesManager/admin/allowances?page=@pageIndex&keyword=@keyword&status=@status"
           class="inline-flex items-center text-sm text-slate-500 hover:text-amber-600 mb-6 transition-colors group">
            <i class="fa-solid fa-arrow-left-long mr-2 transition-transform group-hover:-translate-x-1"></i> Quay lại danh sách
        </a>

        <div class="bg-white shadow-2xl rounded-3xl overflow-hidden border border-slate-100">
            <div class="bg-gradient-to-r from-amber-500 to-orange-600 px-8 py-8 text-white relative">
                <div class="relative z-10">
                    <h2 class="text-2xl font-extrabold tracking-tight">Cập Nhật Phụ Cấp</h2>
                    <p class="mt-1 text-amber-100 text-xs opacity-90">Điều chỉnh thông tin khoản trợ cấp.</p>
                </div>
                <i class="fa-solid fa-pen-to-square absolute right-6 top-1/2 -translate-y-1/2 text-6xl opacity-10 rotate-12"></i>
            </div>

            <form method="post" class="p-8 space-y-5"
                  asp-action="Edit"
                  asp-route-id="@Model.AllowanceId"
                  asp-route-page="@pageIndex"
                  asp-route-keyword="@keyword"
                  asp-route-status="@status">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AllowanceId" />
                <input type="hidden" asp-for="Status" />

                <div class="bg-amber-50/50 rounded-xl p-3 flex items-center gap-3 border border-amber-100">
                    <div class="w-8 h-8 rounded-full bg-amber-100 text-amber-600 flex items-center justify-center flex-shrink-0"><i class="fa-solid fa-hashtag text-sm"></i></div>
                    <div>
                        <p class="text-[10px] text-slate-500 font-bold uppercase">Mã khoản mục</p>
                        <p class="text-sm font-bold text-slate-800">ID: <span class="font-mono text-amber-600">#@Model.AllowanceId</span></p>
                    </div>
                </div>

                <div class="space-y-1">
                    <label asp-for="AllowanceName" class="block text-xs font-bold text-slate-500 uppercase ml-1">Tên phụ cấp <span class="text-red-500">*</span></label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"><i class="fa-solid fa-tag text-slate-400 group-focus-within:text-amber-500 transition-colors"></i></div>
                        <input asp-for="AllowanceName" class="block w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-sm focus:bg-white focus:ring-2 focus:ring-amber-500 outline-none transition-all font-medium" />
                    </div>
                    <span asp-validation-for="AllowanceName" class="text-xs text-red-500 font-medium ml-1"></span>
                </div>

                <div class="space-y-1">
                    <label asp-for="Amount" class="block text-xs font-bold text-slate-500 uppercase ml-1">Số tiền (VNĐ) <span class="text-red-500">*</span></label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"><i class="fa-solid fa-money-bill text-slate-400 group-focus-within:text-amber-500 transition-colors"></i></div>
                        <input type="text" id="amountDisplay" value="@Model.Amount.ToString("N0")" class="block w-full pl-11 pr-14 py-3 bg-slate-50 border border-slate-200 rounded-xl text-sm focus:bg-white focus:ring-2 focus:ring-amber-500 outline-none transition-all font-mono font-bold text-slate-700" placeholder="0" oninput="formatCurrency(this)" maxlength="19" autocomplete="off" />
                        <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none"><span class="text-slate-400 font-bold text-xs">VNĐ</span></div>
                        <input asp-for="Amount" type="hidden" id="amountHidden" />
                    </div>
                    <p id="amountText" class="text-[11px] text-amber-600 font-medium ml-1 italic mt-1 min-h-[1rem]"></p>
                    <span asp-validation-for="Amount" class="text-xs text-red-500 font-medium ml-1"></span>
                </div>

                <div class="flex items-center gap-3 pt-4 border-t border-slate-100 mt-2">
                    <a href="/HumanResourcesManager/admin/allowances?page=@pageIndex&keyword=@keyword&status=@status"
                       class="flex-1 py-3 text-center rounded-xl border border-slate-200 text-slate-500 text-sm font-bold hover:bg-slate-50 transition-all">Huỷ bỏ</a>
                    <button type="submit" class="flex-[2] py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white rounded-xl text-sm font-bold shadow-lg shadow-amber-200 hover:shadow-amber-300 transition-all transform hover:-translate-y-0.5">
                        <i class="fa-solid fa-floppy-disk mr-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Copy script đọc số từ file Create vào đây (hoặc tách ra file js riêng dùng chung)
        const DOCSO={chuSo:["không","một","hai","ba","bốn","năm","sáu","bảy","tám","chín"],tien:["","nghìn","triệu","tỷ","nghìn tỷ"],doc3so:function(n){let t=Math.floor(n/100),o=Math.floor(n%100/10),e=n%10,u="";return 0==t&&0==o&&0==e?"":(0!=t&&(u+=this.chuSo[t]+" trăm ",0==o&&0!=e&&(u+="linh ")),0!=o&&1!=o&&(u+=this.chuSo[o]+" mươi ",0==o&&0!=e&&(u+="linh ")),1==o&&(u+="mười "),1==e?o>1?u+="mốt ":u+=this.chuSo[e]:5==e?0==o?u+=this.chuSo[e]:u+="lăm ":0!=e&&(u+=this.chuSo[e]),u)},doc:function(n){if(0===n)return"Không đồng";let t=0,o=0,e="",u=[];if(n<0)return"Số âm";for(;n>0;)u[t]=n%1e3,n=Math.floor(n/1e3),t++;for(o=t-1;o>=0;o--)0!=u[o]&&(e+=this.doc3so(u[o])+" "+this.tien[o]+" ");return e.replace(/\s+/g," ").trim()}};function formatCurrency(n){let t=n.value.replace(/[^0-9]/g,"");t.length>15&&(t=t.substring(0,15)),document.getElementById("amountHidden").value=t,t?(n.value=new Intl.NumberFormat("en-US").format(t),!isNaN(parseInt(t,10))&&(document.getElementById("amountText").innerText="Bằng chữ: "+(o=DOCSO.doc(parseInt(t,10))).charAt(0).toUpperCase()+o.slice(1)+" đồng")):(n.value="",document.getElementById("amountText").innerText="");var o}

        document.addEventListener("DOMContentLoaded", function() {
            const input = document.getElementById('amountDisplay');
            if(input && input.value) formatCurrency(input);
        });
    </script>
    <style>
        @@keyframes blob {
            0% {
                transform: translate(0, 0) scale(1);
            }

            33% {
                transform: translate(30px, -50px) scale(1.1);
            }

            66% {
                transform: translate(-20px, 20px) scale(0.9);
            }

            100% {
                transform: translate(0, 0) scale(1);
            }
        }

        .animate-blob {
            animation: blob 7s infinite;
        }

        .animation-delay-2000 {
            animation-delay: 2s;
        }
    </style>
}