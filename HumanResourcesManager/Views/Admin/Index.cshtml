@using HumanResourcesManager.BLL.DTOs.UserAccount
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<UserAccountDTO>


<main class="flex-1 overflow-y-auto bg-slate-50/50">
    <header class="bg-white/90 backdrop-blur-sm border-b border-slate-200/80 px-6 lg:px-8 py-5">
        <div class="flex flex-wrap items-center justify-between gap-4">
            <div>
                <h1 class="text-2xl font-semibold text-slate-800">Admin Dashboard</h1>
                <p class="text-slate-500 text-sm mt-0.5">Quản lý hệ thống và tài khoản người dùng</p>
            </div>
            <div class="flex items-center gap-4 rounded-xl bg-slate-50 px-4 py-2.5 border border-slate-200/80">
                <div class="text-right">
                    <p class="text-xs text-slate-500 uppercase tracking-wide">Hôm nay</p>
                    <p class="text-sm font-medium text-slate-800" id="currentDate"></p>
                </div>
                <p class="text-lg font-semibold text-blue-600 tabular-nums" id="currentTime"></p>
            </div>
        </div>
    </header>

    <div class="p-5 lg:p-8">
        <!-- Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="relative bg-white rounded-2xl shadow-sm border border-slate-200/60 p-5 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-xs font-medium uppercase tracking-wide">Tổng Tài Khoản Mèo</p>
                        <p class="text-2xl font-bold text-slate-800 mt-1.5" id="totalUsers">0</p>
                    </div>
                    <div class="w-11 h-11 bg-blue-100 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="relative bg-white rounded-2xl shadow-sm border border-slate-200/60 p-5 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-xs font-medium uppercase tracking-wide">Phòng Ban</p>
                        <p class="text-2xl font-bold text-slate-800 mt-1.5" id="totalDepartments">0</p>
                    </div>
                    <div class="w-11 h-11 bg-emerald-100 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="relative bg-white rounded-2xl shadow-sm border border-slate-200/60 p-5 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-xs font-medium uppercase tracking-wide">Chức Vụ</p>
                        <p class="text-2xl font-bold text-slate-800 mt-1.5" id="totalPositions">0</p>
                    </div>
                    <div class="w-11 h-11 bg-violet-100 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="relative bg-white rounded-2xl shadow-sm border border-slate-200/60 p-5 hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-xs font-medium uppercase tracking-wide">Tài Khoản Active</p>
                        <p class="text-2xl font-bold text-slate-800 mt-1.5" id="activeUsers">0</p>
                    </div>
                    <div class="w-11 h-11 bg-amber-100 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab Content -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">
            <!-- Profile Tab -->
            <div id="profileTab" class="tab-content hidden">
                <div class="px-6 py-5 border-b border-slate-100 bg-slate-50/50">
                    <h2 class="text-lg font-semibold text-slate-800">Hồ Sơ Cá Nhân</h2>
                    <p class="text-sm text-slate-500 mt-0.5">Chỉnh sửa thông tin cá nhân của bạn</p>
                </div>
                <div class="p-6">
                    <form id="profileForm" class="w-full space-y-6" onsubmit="return false;">
                        <input type="hidden" id="profileAvatarData" value="">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pb-6 border-b border-slate-100">
                            <div class="flex items-center gap-4">
                                <div id="profileAvatarPreview" class="w-24 h-24 rounded-full overflow-hidden bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-2xl font-bold text-white ring-2 ring-slate-200 shadow-inner flex-shrink-0">
                                    <img id="profileAvatarImg" class="w-full h-full object-cover hidden" alt="">
                                    <span id="profileAvatarInitial">A</span>
                                </div>
                                <div id="profileAvatarActions" class="flex flex-col gap-2 hidden">
                                    <input type="file" id="profileAvatarInput" accept="image/*" class="hidden">
                                    <button type="button" id="profileAvatarBtn" class="px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-xl text-sm font-medium transition-colors">Chọn ảnh</button>
                                    <button type="button" id="profileAvatarRemoveBtn" class="px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-xl text-sm font-medium transition-colors">Xóa ảnh</button>
                                </div>
                            </div>
                            <div class="flex items-center justify-end md:justify-start">
                                <button type="button" id="profileEditSaveBtn" class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl shadow-sm transition-colors">Chỉnh sửa thông tin</button>
                            </div>
                            <div><label class="block text-sm font-medium text-slate-600 mb-1.5">Họ và tên</label><input type="text" id="profileFullName" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl bg-slate-50 text-slate-800 read-only:bg-slate-50 read-only:cursor-default focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500" required readonly></div>
                            <div><label class="block text-sm font-medium text-slate-600 mb-1.5">Email</label><input type="email" id="profileEmail" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl bg-slate-50 text-slate-800 read-only:bg-slate-50 read-only:cursor-default focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500" required readonly></div>
                            <div><label class="block text-sm font-medium text-slate-600 mb-1.5">Số điện thoại</label><input type="tel" id="profilePhone" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl bg-slate-50 text-slate-800 read-only:bg-slate-50 read-only:cursor-default focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500" placeholder="0901234567" readonly></div>
                            <div><label class="block text-sm font-medium text-slate-600 mb-1.5">Vai trò</label><input type="text" id="profileRole" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl bg-slate-50 text-slate-500" value="Quản trị viên" readonly></div>
                            <div><label class="block text-sm font-medium text-slate-600 mb-1.5">Tên đăng nhập</label><input type="text" id="profileUsername" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl bg-slate-50 text-slate-500" readonly></div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Users Tab -->
            <div id="usersTab" class="tab-content">
                <div class="px-6 py-5 border-b border-slate-100 bg-slate-50/50">
                    <div class="flex flex-wrap items-center justify-between gap-3">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-800">Quản Lý Tài Khoản</h2>
                            <p class="text-sm text-slate-500 mt-0.5">CRUD tài khoản người dùng</p>
                        </div>
                        <a href="/Admin/UserAccounts/Create"
                           class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2.5 rounded-xl shadow-sm transition-colors text-sm">
                            + Thêm Tài Khoản
                        </a>
                    </div>
                </div>

                <div class="p-6">
                    <div class="overflow-x-auto rounded-xl border border-slate-200/80">
                        <table class="employee-table w-full">
                            <thead>
                                <tr class="bg-slate-50 border-b border-slate-200">
                                    <th class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase">ID</th>
                                    <th class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase">Tên Đăng Nhập</th>
                                    <th class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase">Họ Tên</th>
                                    <th class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase">Email</th>
                                    <th class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase">Vai Trò</th>
                                    <th class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase">Trạng Thái</th>
                                    <th class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase">Hành Động</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var u in Model)
                                    {
                                        <tr class="border-b border-slate-100 hover:bg-slate-50">
                                            <td class="px-4 py-2">@u.UserId</td>
                                            <td class="px-4 py-2">@u.Username</td>
                                            <td class="px-4 py-2">@u.FullName</td>
                                            <td class="px-4 py-2">@u.Email</td>
                                            <td class="px-4 py-2">@u.RoleName</td>
                                            <td class="px-4 py-2">
                                                @if (u.Status == HumanResourcesManager.DAL.Shared.Constants.Active)
                                                {
                                                    <span class="px-2 py-1 text-xs rounded bg-emerald-100 text-emerald-700">Active</span>
                                                }
                                                else if (u.Status == HumanResourcesManager.DAL.Shared.Constants.Inactive)
                                                {
                                                    <span class="px-2 py-1 text-xs rounded bg-amber-100 text-amber-700">Locked</span>
                                                }
                                                else
                                                {
                                                    <span class="px-2 py-1 text-xs rounded bg-red-100 text-red-700">Deleted</span>
                                                }
                                            </td>
                                            <td class="px-4 py-2 space-x-2">
                                                <a href="/Admin/UserAccounts/Edit/@u.UserId"
                                                   class="text-blue-600 hover:underline text-sm">Edit</a>

                                                @if (u.Status == HumanResourcesManager.DAL.Shared.Constants.Active)
                                                {
                                                    <a href="/Admin/UserAccounts/Lock/@u.UserId"
                                                       class="text-red-600 hover:underline text-sm">Lock</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="px-4 py-6 text-center text-slate-500">
                                            Không có tài khoản nào
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


            <!-- Departments Tab -->
            <div id="departmentsTab" class="tab-content hidden">
                <div class="px-6 py-5 border-b border-slate-100 bg-slate-50/50">
                    <div class="flex flex-wrap items-center justify-between gap-3">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-800">Quản Lý Phòng Ban</h2>
                            <p class="text-sm text-slate-500 mt-0.5">CRUD phòng ban</p>
                        </div>
                        <button type="button" id="addDepartmentBtn" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2.5 rounded-xl shadow-sm transition-colors text-sm">+ Thêm Phòng Ban</button>
                    </div>
                </div>
                <div class="p-6">
                    <div class="overflow-x-auto rounded-xl border border-slate-200/80">
                        <table class="employee-table w-full">
                            <thead>
                                <tr class="bg-slate-50 border-b border-slate-200">
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">ID</th>
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Tên Phòng Ban</th>
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Mô Tả</th>
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Quản Lý</th>
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Hành Động</th>
                                </tr>
                            </thead>
                            <tbody id="departmentsTableBody">
                                <!-- Data will be inserted here -->
                            </tbody>
                        </table>
                    </div>
                    <div id="departmentsPagination" class="pagination mt-6"></div>
                </div>
            </div>

            <!-- Positions Tab -->
            <div id="positionsTab" class="tab-content hidden">
                <div class="px-6 py-5 border-b border-slate-100 bg-slate-50/50">
                    <div class="flex flex-wrap items-center justify-between gap-3">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-800">Quản Lý Chức Vụ</h2>
                            <p class="text-sm text-slate-500 mt-0.5">CRUD chức vụ</p>
                        </div>
                        <button type="button" id="addPositionBtn" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2.5 rounded-xl shadow-sm transition-colors text-sm">+ Thêm Chức Vụ</button>
                    </div>
                </div>
                <div class="p-6">
                    <div class="overflow-x-auto rounded-xl border border-slate-200/80">
                        <table class="employee-table w-full">
                            <thead>
                                <tr class="bg-slate-50 border-b border-slate-200">
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">ID</th>
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Tên Chức Vụ</th>
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Phòng Ban</th>
                                    <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Hành Động</th>
                                </tr>
                            </thead>
                            <tbody id="positionsTableBody">
                                <!-- Data will be inserted here -->
                            </tbody>
                        </table>
                    </div>
                    <div id="positionsPagination" class="pagination mt-6"></div>
                </div>
            </div>

            <!-- System Config Tab -->
            <div id="systemTab" class="tab-content hidden">
                <div class="px-6 py-5 border-b border-slate-100 bg-slate-50/50">
                    <h2 class="text-lg font-semibold text-slate-800">Cấu Hình Hệ Thống</h2>
                    <p class="text-sm text-slate-500 mt-0.5">Hệ số lương và phụ cấp</p>
                </div>
                <div class="p-6 space-y-6">
                    <div class="bg-slate-50 rounded-xl p-6 border border-slate-200/80">
                        <h3 class="text-base font-semibold text-slate-800 mb-4">Cấu Hình Lương</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Hệ Số Tăng Ca</label>
                                <input type="number" id="overtimeRate" step="0.1" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Mức Phạt Đi Muộn (VNĐ/phút)</label>
                                <input type="number" id="latePenaltyRate" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500">
                            </div>
                        </div>
                    </div>

                    <div class="bg-slate-50 rounded-xl p-6 border border-slate-200/80">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-base font-semibold text-slate-800">Các Khoản Phụ Cấp</h3>
                            <button type="button" id="addAllowanceBtn" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2.5 rounded-xl shadow-sm transition-colors text-sm">+ Thêm Phụ Cấp</button>
                        </div>
                        <div id="allowancesList" class="space-y-3">
                            <!-- Allowances will be inserted here -->
                        </div>
                    </div>

                    <div class="flex justify-end">
                        <button type="button" id="saveSystemConfigBtn" class="bg-emerald-600 hover:bg-emerald-700 text-white font-medium px-6 py-2.5 rounded-xl shadow-sm transition-colors">Lưu Cấu Hình</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>