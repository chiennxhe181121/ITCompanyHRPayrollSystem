@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewData["Title"] ?? "Manager Dashboard - PayFlow Pro")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-slate-50 min-h-screen">
    <!-- Loading overlay khi chuyển trang (riêng cho Manager) -->
    @await Html.PartialAsync("_Loading")

    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        @await Html.PartialAsync("_ManagerSidebar")

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto bg-slate-50/50">
            @RenderBody()
        </main>
    </div>

    <div id="modalContainer"></div>
    <script src="~/js/loading.js"></script>
    <script src="~/js/manager.js"></script>
</body>
</html>

