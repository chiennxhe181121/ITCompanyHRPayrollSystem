@using HumanResourcesManager.BLL.DTOs.Employee
@model CreateLeaveRequestDTO

@{
	Layout = "~/Views/Employee/_EmployeeLayout.cshtml";
}

<main class="flex-1 overflow-y-auto bg-slate-50/50">
    @await Html.PartialAsync("_EmployeeHeader")

    <div class="p-5 lg:p-8 flex justify-center">
        <div class="w-full max-w-2xl bg-white rounded-2xl shadow-sm border border-slate-200/60 overflow-hidden">

            <!-- Header -->
            <div class="px-6 py-5 border-b border-slate-200 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 flex items-center justify-center rounded-xl bg-blue-50 text-blue-600">
                        <i class="bi bi-calendar-check text-lg"></i>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-slate-800">
                            Đăng ký nghỉ phép
                        </h2>
                        <p class="text-sm text-slate-500">
                            Tạo đơn nghỉ phép và chờ quản lý phê duyệt
                        </p>
                    </div>
                </div>

                <a asp-controller="Employee"
                   asp-action="Leaves"
                   class="group inline-flex items-center gap-2
                          px-5 py-2.5 rounded-xl text-sm font-semibold
                          border border-indigo-200 bg-indigo-50
                          text-indigo-700
                          hover:bg-indigo-600 hover:text-white
                          hover:border-indigo-600
                          transition-all duration-200 shadow-sm hover:shadow-md">

                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="w-4 h-4 transition-transform duration-200 group-hover:-translate-x-1"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke="currentColor"
                         stroke-width="2">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M15 19l-7-7 7-7" />
                    </svg>
                    Quay lại
                </a>
            </div>

            <!-- Form -->
            <div class="p-8 flex justify-center">
                <form asp-controller="Employee"
                      asp-action="CreateLeave"
                      id="leaveForm" method="post"
                      class="w-full max-w-lg space-y-7">

                    @Html.AntiForgeryToken()

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly"
                         class="hidden empty:block"></div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="p-4 rounded-2xl bg-red-50 border border-red-200 shadow-sm">
                            <div class="flex items-start gap-3">
                                <div class="text-red-500 text-lg">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                </div>
                                <div class="text-sm text-red-700">
                                    <p class="font-semibold mb-1">Có lỗi xảy ra:</p>
                                    <div asp-validation-summary="ModelOnly"
                                         class="space-y-1"></div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Leave Type -->
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-slate-700">
                            Loại phép
                        </label>

                        <select asp-for="LeaveTypeId"
                                class="w-full px-4 py-2.5 border border-slate-300 rounded-xl
               focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-500
               outline-none transition">
                            <option value="">-- Chọn loại nghỉ --</option>

                            @foreach (var item in ViewBag.LeaveTypes)
                            {
                                string displayName = item.LeaveName switch
                                {
                                    "Annual Leave" => "Nghỉ phép năm",
                                    "Unpaid Leave" => "Nghỉ không lương",
                                    "Maternity Leave" => "Nghỉ thai sản",
                                    _ => item.LeaveName
                                };

                                <option value="@item.LeaveTypeId">
                                    @displayName
                                </option>
                            }
                        </select>

                        <span asp-validation-for="LeaveTypeId"
                              class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Date Range -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">

                        <!-- From Date -->
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-slate-700">
                                Từ ngày
                            </label>

                            <input asp-for="FromDate"
                                   type="date"
                                   class="w-full px-4 py-2.5 border border-slate-300 rounded-xl
                              focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-500
                              outline-none transition" />

                            <span asp-validation-for="FromDate"
                                  class="text-red-500 text-sm"></span>
                        </div>

                        <!-- To Date -->
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-slate-700">
                                Đến ngày
                            </label>

                            <input asp-for="ToDate"
                                   type="date"
                                   class="w-full px-4 py-2.5 border border-slate-300 rounded-xl
                              focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-500
                              outline-none transition" />

                            <span asp-validation-for="ToDate"
                                  class="text-red-500 text-sm"></span>
                        </div>

                    </div>

                    <!-- Reason -->
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-slate-700">
                            Lý do
                        </label>

                        <textarea asp-for="Reason"
                                  rows="4"
                                  placeholder="Nhập lý do nghỉ..."
                                  class="w-full px-4 py-2.5 border border-slate-300 rounded-xl
                             focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-500
                             outline-none transition resize-none"></textarea>

                        <span asp-validation-for="Reason"
                              class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Agree checkbox -->
                    <div class="flex items-start gap-3">
                        <input type="checkbox"
                               id="agreeRule"
                               name="agreeRule"
                               value="true"
                               class="mt-1 w-4 h-4 text-blue-600 border-slate-300 rounded focus:ring-blue-500" />

                        <label for="agreeRule" class="text-sm text-slate-700">
                            Tôi đã đọc và đồng ý với
                        </label>

                        <button type="button"
                                id="openRuleModal"
                                class="text-sm text-indigo-600 hover:text-indigo-800 underline">
                            quy định nghỉ phép
                        </button>
                    </div>

                    <!-- Buttons -->
                    <div class="pt-6 flex justify-end gap-4">

                        <a asp-controller="Employee"
                           asp-action="Leaves"
                           class="px-6 py-2.5 rounded-xl text-sm font-medium
                      bg-slate-100 hover:bg-slate-200 text-slate-700
                      transition-all">
                            Huỷ
                        </a>

                        <button type="submit"
                                class="inline-flex items-center gap-2 px-6 py-2.5
                           bg-gradient-to-r from-indigo-600 to-violet-600
                           hover:from-indigo-700 hover:to-violet-700
                           text-white text-sm font-semibold rounded-xl
                           shadow-md hover:shadow-lg transition-all">
                            <i class="bi bi-send"></i>
                            Gửi đơn
                        </button>

                    </div>

                </form>
            </div>
        </div>
    </div>
</main>

<!-- Rule Modal -->
<div id="ruleModal"
     class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 backdrop-blur-sm">

    <div class="bg-white w-full max-w-lg rounded-2xl shadow-xl p-6 relative animate-fadeIn">

        <!-- Close Button -->
        <button type="button"
                id="closeRuleModal"
                class="absolute top-4 right-4 text-slate-400 hover:text-slate-600 text-lg">
            ✕
        </button>

        <h3 class="text-lg font-semibold text-slate-800 mb-4">
            Quy định nghỉ phép
        </h3>

        <div class="text-sm text-slate-600 space-y-4 leading-relaxed">

            <div>
                <p class="font-semibold text-slate-800 mb-1">1. Nguyên tắc đăng ký nghỉ</p>
                <ul class="list-disc list-inside space-y-1">
                    <li>Ngày bắt đầu nghỉ không được sau ngày kết thúc.</li>
                    <li>Đơn nghỉ không được kéo dài sang năm khác.</li>
                    <li>Thời gian đăng ký phải bao gồm ít nhất một ngày làm việc hợp lệ.</li>
                </ul>
            </div>

            <div>
                <p class="font-semibold text-slate-800 mb-1">2. Thời điểm gửi đơn</p>
                <ul class="list-disc list-inside space-y-1">
                    <li>Đơn nghỉ phải được gửi trước ngày bắt đầu nghỉ.</li>
                    <li>Hệ thống sẽ không chấp nhận đơn được tạo trong hoặc sau ngày bắt đầu nghỉ.</li>
                </ul>
            </div>

            <div>
                <p class="font-semibold text-slate-800 mb-1">3. Trùng thời gian nghỉ</p>
                <ul class="list-disc list-inside space-y-1">
                    <li>Không được đăng ký nếu đã có đơn nghỉ đang chờ phê duyệt hoặc đã được duyệt trong cùng khoảng thời gian.</li>
                </ul>
            </div>

            <div>
                <p class="font-semibold text-slate-800 mb-1">4. Quy định theo loại nghỉ</p>
                <ul class="list-disc list-inside space-y-1">
                    <li><span class="font-medium">Nghỉ phép năm (Annual Leave):</span> Không được vượt quá số ngày phép còn lại trong năm.</li>
                    <li><span class="font-medium">Nghỉ không lương (Unpaid Leave):</span> Không áp dụng giới hạn ngày phép năm.</li>
                    <li><span class="font-medium">Nghỉ thai sản (Maternity Leave):</span> Áp dụng theo chính sách riêng của công ty.</li>
                </ul>
            </div>

            <div>
                <p class="font-semibold text-slate-800 mb-1">5. Phê duyệt</p>
                <ul class="list-disc list-inside space-y-1">
                    <li>Đơn nghỉ chỉ có hiệu lực sau khi được quản lý phê duyệt.</li>
                </ul>
            </div>

        </div>

        <div class="mt-6 flex justify-end">
            <button type="button"
                    id="acceptRule"
                    class="px-5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-xl transition">
                Tôi đã hiểu
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const checkbox = document.getElementById("agreeRule");
            const submitBtn = document.querySelector("#leaveForm button[type='submit']");

            if (!checkbox || !submitBtn) return;

            function toggleButton() {
                if (checkbox.checked) {
                    submitBtn.removeAttribute("disabled");
                    submitBtn.classList.remove("opacity-50", "cursor-not-allowed");
                } else {
                    submitBtn.setAttribute("disabled", "disabled");
                    submitBtn.classList.add("opacity-50", "cursor-not-allowed");
                }
            }

            // Disable ngay khi load
            toggleButton();

            // Khi tick/bỏ tick
            checkbox.addEventListener("change", toggleButton);
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const modal = document.getElementById("ruleModal");
            const openBtn = document.getElementById("openRuleModal");
            const closeBtn = document.getElementById("closeRuleModal");
            const acceptBtn = document.getElementById("acceptRule");
            const checkbox = document.getElementById("agreeRule");

            function openModal() {
                modal.classList.remove("hidden");
                modal.classList.add("flex");
                document.body.classList.add("overflow-hidden");
            }

            function closeModal() {
                modal.classList.add("hidden");
                modal.classList.remove("flex");
                document.body.classList.remove("overflow-hidden");
            }

            openBtn.addEventListener("click", openModal);
            closeBtn.addEventListener("click", closeModal);

            acceptBtn.addEventListener("click", function () {
                checkbox.checked = true;
                checkbox.dispatchEvent(new Event("change"));
                closeModal();
            });

            // Click nền tối để đóng
            modal.addEventListener("click", function (e) {
                if (e.target === modal) {
                    closeModal();
                }
            });
        });
    </script>
}
