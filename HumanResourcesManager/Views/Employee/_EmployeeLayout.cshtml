@* Employee Layout *@
<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Employee Dashboard</title>
	<script src="https://cdn.tailwindcss.com"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<link rel="stylesheet" href="/css/styles.css">
</head>

@{
		    var page = ViewContext.RouteData.Values["attendance"]
					        ?? ViewContext.RouteData.Values["profile"]
					        ?? ViewContext.RouteData.Values["leaves"]
					        ?? ViewContext.RouteData.Values["overtime"]
					        ?? ViewContext.RouteData.Values["payroll"];

		    var route = Context.Request.Path.Value?.Split('/').Last().ToLower();
}

<body class="bg-slate-50 min-h-screen" data-page="@route">

	@await Html.PartialAsync("_Loading")
	<script>
		window.currentEmployee = @Html.Raw(Json.Serialize(Model));
	</script>

	<div class="flex h-screen overflow-hidden">
		@await Html.PartialAsync("_EmployeeSidebar")
		@RenderBody()
	</div>

	<div id="modalContainer"></div>
	<script src="~/js/loading.js"></script>
	<script src="~/js/employee.js"></script>
</body>
</html>