@using HumanResourcesManager.BLL.DTOs
@using HumanResourcesManager.Helpers
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext?.Session
        .GetObject<UserSessionDTO>("USER_SESSION");
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm animate-navbar">
    <div class="container">

        <!-- LOGO -->
        <a class="navbar-brand fw-bold"
           asp-controller="Home"
           asp-action="Index">
            🧑‍💼 HRM System
        </a>

        <!-- RIGHT MENU -->
        <div class="d-flex align-items-center ms-auto gap-3">

            <!-- 🌙 DARK MODE -->
            <div class="form-check form-switch text-white m-0">
                <input class="form-check-input"
                       type="checkbox"
                       id="darkModeToggle">
                <label class="form-check-label">🌙</label>
            </div>

            @if (user == null)
            {
                <!-- NOT LOGIN -->
                <a class="btn btn-outline-light btn-sm"
                   href="/HumanResourcesManager/login">
                    Login
                </a>

                <a class="btn btn-primary btn-sm"
                   href="/HumanResourcesManager/register">
                    Register
                </a>
            }
            else
            {
                <!-- LOGGED IN -->
                <div class="text-white text-end">
                    <div class="fw-semibold">
                        👋 @user.FullName
                    </div>
                    <span class="badge bg-info">
                        @user.RoleCode
                    </span>
                </div>

                <a class="btn btn-outline-danger btn-sm"
                   asp-controller="Auth"
                   asp-action="Logout">
                    Logout
                </a>
            }
        </div>
    </div>
</nav>
